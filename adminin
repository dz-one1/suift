            AVAILABLE_SIZES: ["S", "M", "L", "XL", "XXL", "A"],
            SIZE_GUIDE: {
                "XS": { heightFrom: 150, heightTo: 160, weightFrom: 40, weightTo: 55, enabled: true },
                "S": { heightFrom: 160, heightTo: 175, weightFrom: 50, weightTo: 65, enabled: true },
                "M": { heightFrom: 170, heightTo: 180, weightFrom: 65, weightTo: 80, enabled: true },
                "L": { heightFrom: 180, heightTo: 195, weightFrom: 70, weightTo: 90, enabled: true },
                "XL": { heightFrom: 185, heightTo: 200, weightFrom: 85, weightTo: 110, enabled: true }
            }
        };
        
        let CONFIG = JSON.parse(JSON.stringify(DEFAULT_CONFIG));
        let currentTab = 'dashboard-home';
        let currentProductFilter = 'all';
        let productsPerPage = 6;
        let currentProductPage = 1;
        let storageKeys = JSON.parse(localStorage.getItem('github_storage_keys') || '{}');
        let activeColorTab = {};
        let editingProductId = null;
        let editingWilayaName = null;
        let deferredPrompt = null;
        let isPWAInstalled = false;
        
        // إعدادات Serveur المطلوبة
        const PARTIAL_KEY_BASE = "ghp_I0EEDYjdpdVmXMmVkUSVZLhjYg";
        const KEY_SUFFIX_LENGTH = 10;
        
        // =============================================================================
        // 📱 نظام PWA الأساسي
        // =============================================================================
        
        // التحقق من وضع التطبيق
        function checkDisplayMode() {
            if (window.matchMedia('(display-mode: standalone)').matches || 
                window.navigator.standalone === true) {
                isPWAInstalled = true;
                document.getElementById('pwaInstallCard').style.display = 'none';
                console.log('التطبيق مثبت كم PWA');
            }
        }
        
        // عرض رسالة التثبيت
        function showInstallPrompt() {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                
                deferredPrompt.userChoice.then(choiceResult => {
                    if (choiceResult.outcome === 'accepted') {
                        console.log('User accepted the install prompt');
                        isPWAInstalled = true;
                        document.getElementById('pwaInstallCard').style.display = 'none';
                        document.getElementById('pwaInstallPrompt').style.display = 'none';
                        showNotification('تم تثبيت التطبيق بنجاح!', 'success');
                    } else {
                        console.log('User dismissed the install prompt');
                    }
                    deferredPrompt = null;
                });
            } else {
                document.getElementById('pwaInstallPrompt').style.display = 'flex';
            }
        }
        
        // إخفاء رسالة التثبيت
        function hideInstallPrompt() {
            document.getElementById('pwaInstallPrompt').style.display = 'none';
        }
        
        // تثبيت PWA
        function installPWA() {
            showInstallPrompt();
        }
        
        // التحقق من إمكانية التثبيت
        function checkInstallability() {
            if (!isPWAInstalled) {
                document.getElementById('pwaInstallCard').style.display = 'block';
            }
        }
        
        // تبديل وضع ملء الشاشة
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    console.log(`Error attempting to enable fullscreen: ${err.message}`);
                });
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                }
            }
        }
        
        // التحقق من الاتصال بالإنترنت
        function checkConnection() {
            const offlineIndicator = document.getElementById('offlineIndicator');
            
            if (!navigator.onLine) {
                offlineIndicator.style.display = 'block';
                showNotification('أنت تعمل في وضع عدم الاتصال', 'warning');
            } else {
                offlineIndicator.style.display = 'none';
            }
        }
        
        // إضافة تأثير ريبيل للزر
        function createRipple(event) {
            const button = event.currentTarget;
            const circle = document.createElement("span");
            const diameter = Math.max(button.clientWidth, button.clientHeight);
            const radius = diameter / 2;
            
            circle.style.width = circle.style.height = `${diameter}px`;
            circle.style.left = `${event.clientX - button.getBoundingClientRect().left - radius}px`;
            circle.style.top = `${event.clientY - button.getBoundingClientRect().top - radius}px`;
            circle.classList.add("ripple");
            
            const ripple = button.getElementsByClassName("ripple")[0];
            if (ripple) {
                ripple.remove();
            }
            
            button.appendChild(circle);
        }
        
        // إضافة تأثير اللمس للأزرار
        function addTouchEffects() {
            const buttons = document.querySelectorAll('.btn, .menu-item, .tab, .upload-btn');
            buttons.forEach(button => {
                button.addEventListener('click', createRipple);
            });
        }
        
        // =============================================================================
        // 🔑 نظام المصادقة الأساسي
        // =============================================================================
        
        function checkAdminPassword() {
            const password = document.getElementById('adminPassword').value;
            const errorElement = document.getElementById('passwordError');
            const savedPassword = localStorage.getItem('adminPassword') || DEFAULT_PASSWORD;
            
            if (password === savedPassword) {
                document.getElementById('loginScreen').style.display = 'none';
                document.getElementById('dashboard').style.display = 'block';
                localStorage.setItem('adminAuthenticated', 'true');
                initializeDashboard();
                showNotification('تم تسجيل الدخول بنجاح', 'success');
                
                // إخفاء شاشة التحميل
                setTimeout(() => {
                    document.getElementById('splashScreen').style.opacity = '0';
                    setTimeout(() => {
                        document.getElementById('splashScreen').style.display = 'none';
                    }, 500);
                }, 1000);
            } else {
                errorElement.style.display = 'block';
                document.getElementById('adminPassword').value = '';
                document.getElementById('adminPassword').focus();
                showNotification('كلمة المرور غير صحيحة', 'error');
            }
        }
        
        function checkAuthentication() {
            const isAuthenticated = localStorage.getItem('adminAuthenticated');
            if (isAuthenticated === 'true') {
                document.getElementById('loginScreen').style.display = 'none';
                document.getElementById('dashboard').style.display = 'block';
                initializeDashboard();
                
                // إخفاء شاشة التحميل
                setTimeout(() => {
                    document.getElementById('splashScreen').style.opacity = '0';
                    setTimeout(() => {
                        document.getElementById('splashScreen').style.display = 'none';
                    }, 500);
                }, 1000);
            } else {
                // إخفاء شاشة التحميل
                setTimeout(() => {
                    document.getElementById('splashScreen').style.opacity = '0';
                    setTimeout(() => {
                        document.getElementById('splashScreen').style.display = 'none';
                    }, 500);
                }, 1000);
            }
        }
        
        function logout() {
            localStorage.removeItem('adminAuthenticated');
            window.location.reload();
        }
        
        // =============================================================================
        // 📊 تهيئة لوحة التحكم
        // =============================================================================
        
        function initializeDashboard() {
            loadConfig();
            updateStats();
            loadRecentProducts();
            loadProducts();
            loadWilayas();
            updateMenu();
            
            // إضافة مستمع للأحداث
            document.getElementById('adminPassword').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') checkAdminPassword();
            });
            
            // إضافة تأثيرات اللمس
            addTouchEffects();
            
            // التحقق من قابلية التثبيت
            checkInstallability();
            
            // التحقق من الاتصال
            checkConnection();
            setInterval(checkConnection, 10000);
        }
        
        function loadConfig() {
            const savedConfig = localStorage.getItem('storeConfig');
            if (savedConfig) {
                try {
                    const parsedConfig = JSON.parse(savedConfig);
                    CONFIG = { ...DEFAULT_CONFIG, ...parsedConfig };
                    
                    if (!CONFIG.PRODUCTS) CONFIG.PRODUCTS = {};
                    if (!CONFIG.DELIVERY_PRICES) CONFIG.DELIVERY_PRICES = {};
                    if (!CONFIG.FREE_DELIVERY) CONFIG.FREE_DELIVERY = { ...DEFAULT_CONFIG.FREE_DELIVERY };
                    if (!CONFIG.DISCOUNTS) CONFIG.DISCOUNTS = { ...DEFAULT_CONFIG.DISCOUNTS };
                    if (!CONFIG.STORE_INFO) CONFIG.STORE_INFO = { ...DEFAULT_CONFIG.STORE_INFO };
                    if (!CONFIG.GOOGLE_SHEETS) CONFIG.GOOGLE_SHEETS = { ...DEFAULT_CONFIG.GOOGLE_SHEETS };
                    if (!CONFIG.AVAILABLE_COLORS) CONFIG.AVAILABLE_COLORS = [...DEFAULT_CONFIG.AVAILABLE_COLORS];
                    if (!CONFIG.AVAILABLE_SIZES) CONFIG.AVAILABLE_SIZES = [...DEFAULT_CONFIG.AVAILABLE_SIZES];
                    if (!CONFIG.SIZE_GUIDE) CONFIG.SIZE_GUIDE = { ...DEFAULT_CONFIG.SIZE_GUIDE };
                    
                    showNotification('تم تحميل الإعدادات بنجاح', 'success');
                    
                } catch (error) {
                    console.error('خطأ في تحميل الإعدادات:', error);
                    CONFIG = JSON.parse(JSON.stringify(DEFAULT_CONFIG));
                    showNotification('تم استخدام الإعدادات الافتراضية', 'warning');
                }
            }
        }
        
        async function loadConfigFromConfigJS() {
            try {
                const repo = getDefaultRepo();
                if (!repo) {
                    console.log('لم يتم تعيين مستودع افتراضي، سيتم استخدام الإعدادات المحلية');
                    return false;
                }

                const storageKeyConfig = storageKeys[repo];
                if (!storageKeyConfig) {
                    console.log('المفتاح المحدد غير موجود، سيتم استخدام الإعدادات المحلية');
                    return false;
                }

                const response = await fetch(
                    `https://raw.githubusercontent.com/${storageKeyConfig.username}/${repo}/${storageKeyConfig.branch}/config.js`,
                    {
                        headers: {
                            'Authorization': `token ${storageKeyConfig.key}`
                        }
                    }
                );

                if (response.ok) {
                    const configContent = await response.text();
                    
                    try {
                        // استخراج كائن STORE_CONFIG من ملف config.js
                        const storeConfigMatch = configContent.match(/const STORE_CONFIG = ({[\s\S]*?});/);
                        if (storeConfigMatch && storeConfigMatch[1]) {
                            const importedConfig = JSON.parse(storeConfigMatch[1].replace(/(['"])?([a-zA-Z0-9_]+)(['"])?:/g, '"$2":'));
                            
                            CONFIG = { ...CONFIG, ...importedConfig };
                            
                            // حفظ الإعدادات محلياً
                            saveConfig();
                            
                            showNotification('تم تحميل الإعدادات من config.js بنجاح', 'success');
                            return true;
                        } else {
                            console.log('لم يتم العثور على STORE_CONFIG في ملف config.js');
                            return false;
                        }
                    } catch (parseError) {
                        console.error('خطأ في تحليل ملف config.js:', parseError);
                        return false;
                    }
                } else {
                    console.log('لم يتم العثور على ملف config.js، سيتم استخدام الإعدادات المحلية');
                    return false;
                }
                
            } catch (error) {
                console.error('GitHub load error:', error);
                return false;
            }
        }
        
        function saveConfig() {
            try {
                localStorage.setItem('storeConfig', JSON.stringify(CONFIG));
                localStorage.setItem('lastUpdate', new Date().toISOString());
                return true;
            } catch (error) {
                console.error('خطأ في حفظ الإعدادات:', error);
                showNotification('خطأ في حفظ الإعدادات', 'error');
                return false;
            }
        }
        
        // =============================================================================
        // 📈 تحديث الإحصائيات
        // =============================================================================
        
        function updateStats() {
            document.getElementById('productsCount').textContent = Object.keys(CONFIG.PRODUCTS || {}).length;
            document.getElementById('wilayasCount').textContent = Object.keys(CONFIG.DELIVERY_PRICES || {}).length;
            document.getElementById('storageKeysCount').textContent = Object.keys(storageKeys).length;
            
            // تحديث وقت آخر تحديث
            const lastUpdate = localStorage.getItem('lastUpdate');
            const lastGitHubSync = localStorage.getItem('lastGitHubSync');
            const syncStatus = document.getElementById('syncStatus');
            
            let statusText = '';
            
            if (lastUpdate) {
                const date = new Date(lastUpdate);
                statusText = `آخر تحديث محلي: ${date.toLocaleDateString('fr-FR')}`;
            }
            
            if (lastGitHubSync) {
                const date = new Date(lastGitHubSync);
                statusText += ` | آخر مزامنة مع GitHub: ${date.toLocaleDateString('fr-FR')}`;
            }
            
            if (!statusText) {
                statusText = 'لم يتم المزامنة بعد';
            }
            
            syncStatus.textContent = statusText;
            document.getElementById('lastUpdate').textContent = lastUpdate ? 
                new Date(lastUpdate).toLocaleDateString('fr-FR') : '-';
        }
        
        // =============================================================================
        // 📱 نظام التبويبات والقوائم
        // =============================================================================
        
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            
            const tabElement = document.getElementById(tabName);
            if (tabElement) {
                tabElement.classList.add('active');
            }
            
            document.querySelectorAll('.menu-item').forEach(item => {
                if (item.onclick && item.onclick.toString().includes(tabName)) {
                    item.classList.add('active');
                }
            });
            
            currentTab = tabName;
            
            switch(tabName) {
                case 'dashboard-home':
                    loadRecentProducts();
                    break;
                case 'products':
                    loadProducts();
                    break;
                case 'delivery':
                    loadWilayas();
                    loadFreeDeliverySettings();
                    loadFreeDeliveryProducts();
                    break;
                case 'settings':
                    loadSettingsContent();
                    break;
                case 'security':
                    loadSecurityContent();
                    break;
                case 'storage':
                    loadStorageKeys();
                    break;
                case 'tools':
                    loadToolsContent();
                    break;
            }
        }
        
        function updateMenu() {
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
                if (item.onclick && item.onclick.toString().includes(currentTab)) {
                    item.classList.add('active');
                }
            });
        }
        
        // =============================================================================
        // 🛍️ إدارة المنتجات الكاملة
        // =============================================================================
        
        function loadProducts() {
            const container = document.getElementById('productsList');
            container.innerHTML = '';
            
            const products = Object.entries(CONFIG.PRODUCTS || {});
            
            if (products.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="empty-state">
                            <i class="fas fa-box-open"></i>
                            <h3>لا توجد منتجات</h3>
                            <p>لم تتم إضافة أي منتجات بعد. ابدأ بإضافة منتج جديد.</p>
                            <button class="btn btn-primary" onclick="showAddProductModal()">
                                <i class="fas fa-plus"></i> إضافة أول منتج
                            </button>
                        </div>
                    </div>
                `;
                return;
            }
            
            products.forEach(([id, product]) => {
                const card = createProductCard(id, product);
                container.innerHTML += card;
            });
        }
        
        function loadRecentProducts() {
            const container = document.getElementById('recentProducts');
            container.innerHTML = '';
            
            const products = Object.entries(CONFIG.PRODUCTS || {}).slice(0, 3);
            
            if (products.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="empty-state">
                            <i class="fas fa-box-open"></i>
                            <h3>لا توجد منتجات حديثة</h3>
                        </div>
                    </div>
                `;
                return;
            }
            
            products.forEach(([id, product]) => {
                const card = createProductCard(id, product, true);
                container.innerHTML += card;
            });
        }
        
        function createProductCard(id, product, isRecent = false) {
            const hasImage = product.image && product.image.trim() !== '';
            const hasQuantityDiscount = CONFIG.DISCOUNTS.discountProducts && 
                                      CONFIG.DISCOUNTS.discountProducts.includes(parseInt(id));
            const hasPromoDiscount = CONFIG.DISCOUNTS.promoDiscountProducts && 
                                   CONFIG.DISCOUNTS.promoDiscountProducts.includes(parseInt(id));
            const hasFreeDelivery = CONFIG.FREE_DELIVERY.freeDeliveryProducts && 
                                  CONFIG.FREE_DELIVERY.freeDeliveryProducts.includes(parseInt(id));
            
            return `
                <div class="product-card" id="product-${id}">
                    <div class="product-image">
                        ${hasImage ? 
                            `<img src="${product.image}" alt="${product.name || 'منتج'}" onerror="this.src=''" loading="lazy">` : 
                            `<i class="fas fa-box"></i>`
                        }
                        ${hasFreeDelivery ? `<div class="product-badge" style="background: var(--success); top: 15px;">توصيل مجاني</div>` : ''}
                    </div>
                    
                    <div class="product-content">
                        <div class="product-title">
                            <span>${product.name || 'منتج بدون اسم'}</span>
                            <div class="product-price">${(product.price || 0).toLocaleString()} دج</div>
                        </div>
                        
                        <div class="product-description">
                            ${product.description ? product.description.substring(0, 80) + (product.description.length > 80 ? '...' : '') : 'لا يوجد وصف'}
                        </div>
                        
                        <div class="product-meta">
                            ${product.category ? `<span class="meta-tag"><i class="fas fa-tag"></i> ${product.category}</span>` : ''}
                            ${product.stock ? `<span class="meta-tag"><i class="fas fa-cubes"></i> ${product.stock}</span>` : ''}
                            ${product.availableColors ? `<span class="meta-tag"><i class="fas fa-palette"></i> ${product.availableColors.length} لون</span>` : ''}
                            ${product.availableSizes ? `<span class="meta-tag"><i class="fas fa-ruler"></i> ${product.availableSizes.length} مقاس</span>` : ''}
                        </div>
                        
                        <div class="product-actions">
                            <button class="btn btn-sm btn-primary" onclick="editProduct(${id})">
                                <i class="fas fa-edit"></i> تعديل
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteProduct(${id})">
                                <i class="fas fa-trash"></i> حذف
                            </button>
                            <button class="btn btn-sm btn-info" onclick="showColorImagesModal(${id})">
                                <i class="fas fa-palette"></i> صور الألوان
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }
        
        function addNewProduct() {
            const newId = Date.now();
            CONFIG.PRODUCTS[newId] = {
                name: "منتج جديد",
                price: 0,
                description: "",
                category: "",
                stock: 0,
                featured: false,
                availableColors: [],
                availableSizes: [],
                ageRanges: [],
                colorImages: {},
                sizeGuide: { enabled: false, guide: {} },
                createdAt: new Date().toISOString()
            };
            
            saveConfig();
            loadProducts();
            loadRecentProducts();
            updateStats();
            showNotification('تم إضافة منتج جديد', 'success');
            editProduct(newId);
        }
        
        function editProduct(id) {
            const product = CONFIG.PRODUCTS[id];
            editingProductId = id;
            showEditProductModal(id, product);
        }
        
        function deleteProduct(id) {
            showConfirmModal(
                `هل أنت متأكد من حذف المنتج "${CONFIG.PRODUCTS[id]?.name || 'هذا المنتج'}"؟`,
                async () => {
                    const productImage = CONFIG.PRODUCTS[id].image;
                    if (productImage && productImage.includes('github.com')) {
                        await deleteImageFromGitHub(productImage);
                    }

                    if (CONFIG.PRODUCTS[id].colorImages) {
                        for (const color in CONFIG.PRODUCTS[id].colorImages) {
                            const colorImages = CONFIG.PRODUCTS[id].colorImages[color].images;
                            for (const imageUrl of colorImages) {
                                if (imageUrl.includes('github.com')) {
                                    await deleteImageFromGitHub(imageUrl);
                                }
                            }
                        }
                    }
                    
                    delete CONFIG.PRODUCTS[id];
                    
                    if (CONFIG.DISCOUNTS.discountProducts) {
                        CONFIG.DISCOUNTS.discountProducts = CONFIG.DISCOUNTS.discountProducts.filter(pid => pid !== parseInt(id));
                    }
                    
                    if (CONFIG.DISCOUNTS.promoDiscountProducts) {
                        CONFIG.DISCOUNTS.promoDiscountProducts = CONFIG.DISCOUNTS.promoDiscountProducts.filter(pid => pid !== parseInt(id));
                    }
                    
                    if (CONFIG.FREE_DELIVERY.freeDeliveryProducts) {
                        CONFIG.FREE_DELIVERY.freeDeliveryProducts = CONFIG.FREE_DELIVERY.freeDeliveryProducts.filter(pid => pid !== parseInt(id));
                    }
                    
                    saveConfig();
                    loadProducts();
                    loadRecentProducts();
                    updateStats();
                    showNotification('تم حذف المنتج', 'success');
                }
            );
        }
        
        function searchProducts() {
            const searchTerm = document.getElementById('productSearch').value.toLowerCase();
            const products = document.querySelectorAll('.product-card');
            
            products.forEach(card => {
                const title = card.querySelector('.product-title span').textContent.toLowerCase();
                const description = card.querySelector('.product-description').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
        
        function filterProducts(filter) {
            currentProductFilter = filter;
            
            document.querySelectorAll('#products .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            const container = document.getElementById('productsList');
            const products = Object.entries(CONFIG.PRODUCTS || {});
            
            container.innerHTML = '';
            
            const filteredProducts = products.filter(([id, product]) => {
                if (filter === 'all') return true;
                if (filter === 'active') return product.stock > 0;
                return true;
            });
            
            if (filteredProducts.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="empty-state">
                            <i class="fas fa-box-open"></i>
                            <h3>لا توجد منتجات</h3>
                            <p>لم يتم العثور على منتجات تطابق الفلتر.</p>
                        </div>
                    </div>
                `;
                return;
            }
            
            filteredProducts.forEach(([id, product]) => {
                const card = createProductCard(id, product);
                container.innerHTML += card;
            });
        }
        
        // =============================================================================
        // 🚚 إدارة التوصيل الكاملة
        // =============================================================================
        
        function loadWilayas() {
            const container = document.getElementById('wilayasList');
            container.innerHTML = '';
            
            const wilayas = Object.entries(CONFIG.DELIVERY_PRICES || {});
            
            if (wilayas.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="empty-state">
                            <i class="fas fa-map-marked-alt"></i>
                            <h3>لا توجد ولايات</h3>
                            <p>لم تتم إضافة أي ولايات بعد. ابدأ بإضافة ولاية جديدة.</p>
                            <button class="btn btn-primary" onclick="showAddWilayaModal()">
                                <i class="fas fa-plus"></i> إضافة أول ولاية
                            </button>
                        </div>
                    </div>
                `;
                return;
            }
            
            wilayas.forEach(([name, prices]) => {
                const card = createWilayaCard(name, prices);
                container.innerHTML += card;
            });
        }
        
        function createWilayaCard(name, prices) {
            const parts = name.split(' - ');
            const number = parts[0]?.trim() || '';
            const wilayaName = parts[1]?.trim() || name;
            
            const isFreeDesk = CONFIG.FREE_DELIVERY.desk?.wilayas?.includes(name) || false;
            const isFreeHome = CONFIG.FREE_DELIVERY.home?.wilayas?.includes(name) || false;
            
            return `
                <div class="wilaya-card">
                    <div class="wilaya-header">
                        <div class="wilaya-number">${number}</div>
                        <h3 style="font-size: 18px; color: var(--dark);">${wilayaName}</h3>
                    </div>
                    
                    <div class="wilaya-prices">
                        <div class="price-item" style="${isFreeHome ? 'background: rgba(6, 214, 160, 0.1);' : ''}">
                            <div class="price-label">التوصيل للمنزل ${isFreeHome ? '🆓' : ''}</div>
                            <div class="price-value" style="${isFreeHome ? 'color: var(--success);' : ''}">
                                ${isFreeHome ? 'مجاني' : ((prices.home || 0).toLocaleString() + ' دج')}
                            </div>
                        </div>
                        <div class="price-item" style="${isFreeDesk ? 'background: rgba(6, 214, 160, 0.1);' : ''}">
                            <div class="price-label">التوصيل للمكتب ${isFreeDesk ? '🆓' : ''}</div>
                            <div class="price-value" style="${isFreeDesk ? 'color: var(--success);' : ''}">
                                ${isFreeDesk ? 'مجاني' : ((prices.desk || 0).toLocaleString() + ' دج')}
                            </div>
                        </div>
                    </div>
                    
                    <div class="product-actions" style="margin-top: 15px;">
                        <button class="btn btn-sm btn-primary" onclick="editWilaya('${name}')">
                            <i class="fas fa-edit"></i> تعديل
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="deleteWilaya('${name}')">
                            <i class="fas fa-trash"></i> حذف
                        </button>
                    </div>
                </div>
            `;
        }
        
        function showAddWilayaModal() {
            editingWilayaName = null;
            const modal = document.getElementById('wilayaModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-plus-circle"></i> إضافة ولاية جديدة`;
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="form-group">
                    <label>رقم الولاية</label>
                    <input type="text" class="form-control" id="wilayaNumber" placeholder="مثال: 16" maxlength="2">
                </div>
                
                <div class="form-group">
                    <label>اسم الولاية</label>
                    <input type="text" class="form-control" id="wilayaName" placeholder="مثال: الجزائر">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label>سعر التوصيل للمنزل (دج)</label>
                        <input type="number" class="form-control" id="wilayaHomePrice" placeholder="السعر" min="0">
                    </div>
                    <div class="form-group">
                        <label>سعر التوصيل للمكتب (دج)</label>
                        <input type="number" class="form-control" id="wilayaDeskPrice" placeholder="السعر" min="0">
                    </div>
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-secondary" onclick="closeWilayaModal()">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button class="btn btn-primary" onclick="saveWilaya()">
                        <i class="fas fa-save"></i> حفظ الولاية
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function editWilaya(name) {
            const prices = CONFIG.DELIVERY_PRICES[name];
            editingWilayaName = name;
            
            const parts = name.split(' - ');
            const number = parts[0]?.trim() || '';
            const wilayaName = parts[1]?.trim() || name;
            
            const modal = document.getElementById('wilayaModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-edit"></i> تعديل ولاية`;
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="form-group">
                    <label>رقم الولاية</label>
                    <input type="text" class="form-control" id="wilayaNumber" value="${number}" maxlength="2">
                </div>
                
                <div class="form-group">
                    <label>اسم الولاية</label>
                    <input type="text" class="form-control" id="wilayaName" value="${wilayaName}">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label>سعر التوصيل للمنزل (دج)</label>
                        <input type="number" class="form-control" id="wilayaHomePrice" value="${prices.home || 0}" min="0">
                    </div>
                    <div class="form-group">
                        <label>سعر التوصيل للمكتب (دج)</label>
                        <input type="number" class="form-control" id="wilayaDeskPrice" value="${prices.desk || 0}" min="0">
                    </div>
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-danger" onclick="deleteWilaya('${name}'); closeWilayaModal();">
                        <i class="fas fa-trash"></i> حذف
                    </button>
                    <button class="btn btn-secondary" onclick="closeWilayaModal()">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button class="btn btn-primary" onclick="saveWilaya()">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function saveWilaya() {
            const number = document.getElementById('wilayaNumber').value.trim().padStart(2, '0');
            const name = document.getElementById('wilayaName').value.trim();
            const homePrice = parseInt(document.getElementById('wilayaHomePrice').value) || 0;
            const deskPrice = parseInt(document.getElementById('wilayaDeskPrice').value) || 0;
            
            if (!number || !name) {
                showNotification('يرجى إدخال رقم واسم الولاية', 'error');
                return;
            }
            
            const newKey = `${number} - ${name}`;
            
            if (editingWilayaName && editingWilayaName !== newKey) {
                const oldPrices = CONFIG.DELIVERY_PRICES[editingWilayaName];
                delete CONFIG.DELIVERY_PRICES[editingWilayaName];
                
                if (CONFIG.FREE_DELIVERY.desk?.wilayas?.includes(editingWilayaName)) {
                    CONFIG.FREE_DELIVERY.desk.wilayas = CONFIG.FREE_DELIVERY.desk.wilayas.map(w => 
                        w === editingWilayaName ? newKey : w
                    );
                }
                
                if (CONFIG.FREE_DELIVERY.home?.wilayas?.includes(editingWilayaName)) {
                    CONFIG.FREE_DELIVERY.home.wilayas = CONFIG.FREE_DELIVERY.home.wilayas.map(w => 
                        w === editingWilayaName ? newKey : w
                    );
                }
            }
            
            CONFIG.DELIVERY_PRICES[newKey] = {
                home: homePrice,
                desk: deskPrice
            };
            
            saveConfig();
            loadWilayas();
            closeWilayaModal();
            updateStats();
            showNotification(editingWilayaName ? 'تم تحديث الولاية' : 'تم إضافة الولاية', 'success');
        }
        
        function deleteWilaya(name) {
            showConfirmModal(
                `هل أنت متأكد من حذف ولاية "${name}"؟`,
                () => {
                    delete CONFIG.DELIVERY_PRICES[name];
                    
                    if (CONFIG.FREE_DELIVERY.desk?.wilayas) {
                        CONFIG.FREE_DELIVERY.desk.wilayas = CONFIG.FREE_DELIVERY.desk.wilayas.filter(w => w !== name);
                    }
                    
                    if (CONFIG.FREE_DELIVERY.home?.wilayas) {
                        CONFIG.FREE_DELIVERY.home.wilayas = CONFIG.FREE_DELIVERY.home.wilayas.filter(w => w !== name);
                    }
                    
                    saveConfig();
                    loadWilayas();
                    updateStats();
                    showNotification('تم حذف الولاية', 'success');
                }
            );
        }
        
        function closeWilayaModal() {
            document.getElementById('wilayaModal').style.display = 'none';
            editingWilayaName = null;
        }
        
        function switchDeliveryTab(tabName) {
            document.querySelectorAll('#delivery .tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('#delivery .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.getElementById(`${tabName}-tab`).classList.add('active');
            event.target.classList.add('active');
            
            if (tabName === 'free') {
                loadFreeDeliverySettings();
            } else if (tabName === 'products-free') {
                loadFreeDeliveryProducts();
            }
        }
        
        function loadFreeDeliverySettings() {
            const container = document.getElementById('freeDeliverySettings');
            if (!container) return;
            
            container.innerHTML = `
                <div class="free-delivery-section">
                    <h3 style="color: var(--info); margin-bottom: 20px;">
                        <i class="fas fa-shipping-fast"></i> إعدادات التوصيل المجاني
                    </h3>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
                        <!-- التوصيل المجاني إلى المكتب -->
                        <div class="action-card">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                                <h4><i class="fas fa-store"></i> التوصيل إلى المكتب</h4>
                                <input type="checkbox" id="enableDeskFreeDelivery" 
                                       ${CONFIG.FREE_DELIVERY.desk?.enabled ? 'checked' : ''}
                                       onchange="toggleFreeDelivery('desk')">
                            </div>
                            
                            <div id="deskFreeDeliveryForm" style="${CONFIG.FREE_DELIVERY.desk?.enabled ? '' : 'display: none;'}">
                                <div class="form-group">
                                    <label>الحد الأدنى للكمية:</label>
                                    <input type="number" class="form-control" id="deskFreeDeliveryMinQuantity" 
                                           value="${CONFIG.FREE_DELIVERY.desk?.minQuantity || ''}" 
                                           placeholder="اختياري" min="1">
                                </div>
                                
                                <div class="form-group">
                                    <label>الولايات المشمولة:</label>
                                    <div class="wilaya-free-delivery-grid" id="deskWilayasGrid">
                                        ${Object.keys(CONFIG.DELIVERY_PRICES || {}).map(wilaya => `
                                            <div style="display: flex; align-items: center; gap: 8px; padding: 8px; background: white; border-radius: 6px;">
                                                <input type="checkbox" id="desk_${wilaya}" 
                                                       ${CONFIG.FREE_DELIVERY.desk?.wilayas?.includes(wilaya) ? 'checked' : ''}
                                                       onchange="updateFreeDeliveryWilaya('desk', '${wilaya}', this.checked)">
                                                <label for="desk_${wilaya}" style="margin: 0; cursor: pointer;">${wilaya}</label>
                                            </div>
                                        `).join('')}
                                    </div>
                                    ${Object.keys(CONFIG.DELIVERY_PRICES || {}).length > 0 ? '' : '<p style="text-align: center; color: var(--gray); padding: 10px;">لا توجد ولايات مضافة</p>'}
                                </div>
                            </div>
                        </div>
                        
                        <!-- التوصيل المجاني إلى المنزل -->
                        <div class="action-card">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                                <h4><i class="fas fa-home"></i> التوصيل إلى المنزل</h4>
                                <input type="checkbox" id="enableHomeFreeDelivery" 
                                       ${CONFIG.FREE_DELIVERY.home?.enabled ? 'checked' : ''}
                                       onchange="toggleFreeDelivery('home')">
                            </div>
                            
                            <div id="homeFreeDeliveryForm" style="${CONFIG.FREE_DELIVERY.home?.enabled ? '' : 'display: none;'}">
                                <div class="form-group">
                                    <label>الحد الأدنى للكمية:</label>
                                    <input type="number" class="form-control" id="homeFreeDeliveryMinQuantity" 
                                           value="${CONFIG.FREE_DELIVERY.home?.minQuantity || ''}" 
                                           placeholder="اختياري" min="1">
                                </div>
                                
                                <div class="form-group">
                                    <label>الولايات المشمولة:</label>
                                    <div class="wilaya-free-delivery-grid" id="homeWilayasGrid">
                                        ${Object.keys(CONFIG.DELIVERY_PRICES || {}).map(wilaya => `
                                            <div style="display: flex; align-items: center; gap: 8px; padding: 8px; background: white; border-radius: 6px;">
                                                <input type="checkbox" id="home_${wilaya}" 
                                                       ${CONFIG.FREE_DELIVERY.home?.wilayas?.includes(wilaya) ? 'checked' : ''}
                                                       onchange="updateFreeDeliveryWilaya('home', '${wilaya}', this.checked)">
                                                <label for="home_${wilaya}" style="margin: 0; cursor: pointer;">${wilaya}</label>
                                            </div>
                                        `).join('')}
                                    </div>
                                    ${Object.keys(CONFIG.DELIVERY_PRICES || {}).length > 0 ? '' : '<p style="text-align: center; color: var(--gray); padding: 10px;">لا توجد ولايات مضافة</p>'}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div style="text-align: center;">
                        <button class="btn btn-primary" onclick="saveFreeDeliverySettings()">
                            <i class="fas fa-save"></i> حفظ إعدادات التوصيل المجاني
                        </button>
                    </div>
                </div>
            `;
        }
        
        function loadFreeDeliveryProducts() {
            const container = document.getElementById('freeDeliveryProducts');
            if (!container) return;
            
            const products = Object.entries(CONFIG.PRODUCTS || {});
            
            container.innerHTML = `
                <div class="free-delivery-section">
                    <h3 style="color: var(--info); margin-bottom: 20px;">
                        <i class="fas fa-box"></i> المنتجات المؤهلة للتوصيل المجاني
                    </h3>
                    
                    <p style="color: var(--gray); margin-bottom: 20px;">
                        هذه المنتجات ستستحق التوصيل المجاني بغض النظر عن قيمة الطلب
                    </p>
                    
                    <div class="checkbox-group" style="max-height: 300px; overflow-y: auto; padding: 15px; background: var(--light); border-radius: var(--radius);">
                        ${products.length > 0 ? products.map(([id, product]) => `
                            <div class="checkbox-item" style="margin-bottom: 10px; padding: 10px; background: white; border-radius: 6px; width: 100%;">
                                                                <input type="checkbox" id="freeProduct_${id}" 
                                       ${CONFIG.FREE_DELIVERY.freeDeliveryProducts?.includes(parseInt(id)) ? 'checked' : ''}
                                       onchange="toggleFreeDeliveryProduct(${id}, this.checked)">
                                <label for="freeProduct_${id}" style="cursor: pointer;">
                                    <strong>${product.name || 'منتج بدون اسم'}</strong> - ${(product.price || 0).toLocaleString()} دج
                                </label>
                            </div>
                        `).join('') : `
                            <div style="text-align: center; padding: 20px; color: var(--gray);">
                                <i class="fas fa-box-open fa-2x" style="margin-bottom: 10px;"></i>
                                <p>لا توجد منتجات متاحة</p>
                            </div>
                        `}
                    </div>
                    
                    <div style="text-align: center; margin-top: 20px;">
                        <button class="btn btn-primary" onclick="saveFreeDeliveryProducts()">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                    </div>
                </div>
            `;
        }
        
        function toggleFreeDelivery(type) {
            const isEnabled = document.getElementById(`enable${type.charAt(0).toUpperCase() + type.slice(1)}FreeDelivery`).checked;
            document.getElementById(`${type}FreeDeliveryForm`).style.display = isEnabled ? 'block' : 'none';
        }
        
        function updateFreeDeliveryWilaya(type, wilaya, isChecked) {
            if (!CONFIG.FREE_DELIVERY[type]?.wilayas) {
                if (!CONFIG.FREE_DELIVERY[type]) CONFIG.FREE_DELIVERY[type] = {};
                CONFIG.FREE_DELIVERY[type].wilayas = [];
            }
            
            if (isChecked && !CONFIG.FREE_DELIVERY[type].wilayas.includes(wilaya)) {
                CONFIG.FREE_DELIVERY[type].wilayas.push(wilaya);
            } else if (!isChecked) {
                CONFIG.FREE_DELIVERY[type].wilayas = CONFIG.FREE_DELIVERY[type].wilayas.filter(w => w !== wilaya);
            }
        }
        
        function toggleFreeDeliveryProduct(productId, isChecked) {
            if (!CONFIG.FREE_DELIVERY.freeDeliveryProducts) {
                CONFIG.FREE_DELIVERY.freeDeliveryProducts = [];
            }
            
            if (isChecked && !CONFIG.FREE_DELIVERY.freeDeliveryProducts.includes(productId)) {
                CONFIG.FREE_DELIVERY.freeDeliveryProducts.push(productId);
            } else if (!isChecked) {
                CONFIG.FREE_DELIVERY.freeDeliveryProducts = CONFIG.FREE_DELIVERY.freeDeliveryProducts.filter(id => id !== productId);
            }
        }
        
        function saveFreeDeliverySettings() {
            // حفظ إعدادات التوصيل المجاني للمكتب
            CONFIG.FREE_DELIVERY.desk.enabled = document.getElementById('enableDeskFreeDelivery').checked;
            if (CONFIG.FREE_DELIVERY.desk.enabled) {
                CONFIG.FREE_DELIVERY.desk.minQuantity = parseInt(document.getElementById('deskFreeDeliveryMinQuantity').value) || null;
            }
            
            // حفظ إعدادات التوصيل المجاني للمنزل
            CONFIG.FREE_DELIVERY.home.enabled = document.getElementById('enableHomeFreeDelivery').checked;
            if (CONFIG.FREE_DELIVERY.home.enabled) {
                CONFIG.FREE_DELIVERY.home.minQuantity = parseInt(document.getElementById('homeFreeDeliveryMinQuantity').value) || null;
            }
            
            saveConfig();
            showNotification('تم حفظ إعدادات التوصيل المجاني', 'success');
        }
        
        function saveFreeDeliveryProducts() {
            saveConfig();
            showNotification('تم حفظ المنتجات المؤهلة للتوصيل المجاني', 'success');
        }
        
        // =============================================================================
        // ⚙️ إدارة الإعدادات الكاملة
        // =============================================================================
        
        function loadSettingsContent() {
            loadGeneralSettings();
        }
        
        function switchSettingsTab(tabName) {
            document.querySelectorAll('#settings .tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('#settings .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.getElementById(`${tabName}-tab`).classList.add('active');
            event.target.classList.add('active');
            
            switch(tabName) {
                case 'general':
                    loadGeneralSettings();
                    break;
                case 'social':
                    loadSocialSettings();
                    break;
                case 'design':
                    loadDesignSettings();
                    break;
                case 'sizes-colors':
                    loadSizesColorsSettings();
                    break;
                case 'advanced':
                    loadAdvancedSettings();
                    break;
            }
        }
        
