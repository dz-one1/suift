        function loadAdvancedSettings() {
            const container = document.getElementById('advanced-tab');
            const ordersData = JSON.parse(localStorage.getItem('storeOrders') || '[]');
            
            container.innerHTML = `
                <div>
                    <h3 style="color: var(--primary); margin-bottom: 20px;">
                        <i class="fas fa-list-alt"></i> جدول الطلبات المحفوظة
                    </h3>
                    
                    ${ordersData.length > 0 ? `
                        <div style="overflow-x: auto; margin-bottom: 20px;">
                            <table style="width: 100%; border-collapse: collapse; background: white; border-radius: var(--radius); overflow: hidden; box-shadow: var(--shadow);">
                                <thead>
                                    <tr style="background: var(--primary); color: white;">
                                        <th style="padding: 12px; text-align: right;">الرقم</th>
                                        <th style="padding: 12px; text-align: right;">الاسم</th>
                                        <th style="padding: 12px; text-align: right;">الهاتف</th>
                                        <th style="padding: 12px; text-align: right;">الولاية</th>
                                        <th style="padding: 12px; text-align: right;">المبلغ</th>
                                        <th style="padding: 12px; text-align: right;">التاريخ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${ordersData.slice(0, 10).map((order, index) => `
                                        <tr style="border-bottom: 1px solid var(--border);">
                                            <td style="padding: 12px; text-align: right;">${index + 1}</td>
                                            <td style="padding: 12px; text-align: right;">${order.customerName || 'غير محدد'}</td>
                                            <td style="padding: 12px; text-align: right;">${order.customerPhone || 'غير محدد'}</td>
                                            <td style="padding: 12px; text-align: right;">${order.selectedWilaya || 'غير محدد'}</td>
                                            <td style="padding: 12px; text-align: right; color: var(--success); font-weight: 600;">
                                                ${order.total ? order.total.toLocaleString() + ' دج' : 'غير محدد'}
                                            </td>
                                            <td style="padding: 12px; text-align: right; font-size: 14px; color: var(--gray);">
                                                ${new Date(order.timestamp || Date.now()).toLocaleDateString('fr-FR')}
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                        
                        <div style="display: flex; gap: 10px; margin-top: 20px;">
                            <button class="btn btn-success" onclick="exportOrdersToCSV()">
                                <i class="fas fa-file-export"></i> تصدير إلى CSV
                            </button>
                            <button class="btn btn-danger" onclick="clearOrdersData()">
                                <i class="fas fa-trash"></i> حذف جميع الطلبات
                            </button>
                        </div>
                        
                        <p style="margin-top: 20px; color: var(--gray); font-size: 14px;">
                            <i class="fas fa-info-circle"></i> يعرض آخر 10 طلبات فقط. إجمالي الطلبات المحفوظة: ${ordersData.length}
                        </p>
                    ` : `
                        <div class="empty-state" style="padding: 40px;">
                            <i class="fas fa-clipboard-list fa-3x" style="color: var(--gray); margin-bottom: 20px;"></i>
                            <h3>لا توجد طلبات محفوظة</h3>
                            <p>لم يتم حفظ أي طلبات بعد.</p>
                        </div>
                    `}
                    
                    <div style="margin-top: 40px;">
                        <h3 style="color: var(--primary); margin-bottom: 20px;">
                            <i class="fas fa-cogs"></i> أدوات متقدمة
                        </h3>
                        
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                            <button class="btn btn-secondary" onclick="clearCache()">
                                <i class="fas fa-broom"></i> مسح الكاش
                            </button>
                            <button class="btn btn-secondary" onclick="resetToDefault()">
                                <i class="fas fa-redo"></i> إعادة التعيين
                            </button>
                            <button class="btn btn-info" onclick="exportConfig()">
                                <i class="fas fa-file-download"></i> تصدير الإعدادات
                            </button>
                            <button class="btn btn-info" onclick="importConfig()">
                                <i class="fas fa-file-upload"></i> استيراد الإعدادات
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }
        
        function saveGeneralSettings() {
            CONFIG.STORE_INFO.name = document.getElementById('storeName').value.trim() || DEFAULT_CONFIG.STORE_INFO.name;
            CONFIG.STORE_INFO.storeIcon = document.getElementById('storeIcon').value.trim() || DEFAULT_CONFIG.STORE_INFO.storeIcon;
            CONFIG.STORE_INFO.storeTitle = document.getElementById('storeTitle').value.trim() || DEFAULT_CONFIG.STORE_INFO.storeTitle;
            CONFIG.STORE_INFO.tagline = document.getElementById('storeTagline').value.trim() || DEFAULT_CONFIG.STORE_INFO.tagline;
            
            const phoneNumbersInput = document.getElementById('phoneNumbers').value.trim();
            CONFIG.STORE_INFO.phoneNumbers = phoneNumbersInput ? 
                phoneNumbersInput.split(',').map(num => num.trim()).filter(num => num) : 
                DEFAULT_CONFIG.STORE_INFO.phoneNumbers;
            
            CONFIG.GOOGLE_SHEETS.url = document.getElementById('googleSheetsUrl').value.trim() || '';
            CONFIG.GOOGLE_SHEETS.description = document.getElementById('googleSheetsDescription').value.trim() || '';
            CONFIG.GOOGLE_SHEETS.autoUpdate = document.getElementById('googleSheetsAutoUpdate').checked;
            
            saveConfig();
            showNotification('تم حفظ الإعدادات العامة', 'success');
        }
        
        function saveSocialSettings() {
            CONFIG.STORE_INFO.facebookUrl = document.getElementById('facebookUrl').value.trim();
            CONFIG.STORE_INFO.instagramUrl = document.getElementById('instagramUrl').value.trim();
            CONFIG.STORE_INFO.messengerUrl = document.getElementById('messengerUrl').value.trim();
            CONFIG.STORE_INFO.viberNumber = document.getElementById('viberNumber').value.trim();
            CONFIG.STORE_INFO.whatsappNumber = document.getElementById('whatsappNumber').value.trim();
            CONFIG.STORE_INFO.whatsappUrl = document.getElementById('whatsappUrl').value.trim();
            
            saveConfig();
            showNotification('تم حفظ إعدادات التواصل', 'success');
        }
        
        function toggleDiscountSettings(type) {
            const settingsDiv = document.getElementById(`${type}DiscountSettings`);
            const checkbox = document.getElementById(`enable${type.charAt(0).toUpperCase() + type.slice(1)}Discount`);
            settingsDiv.style.display = checkbox.checked ? 'block' : 'none';
        }
        
        function toggleDiscountProducts(type) {
            const productsDiv = document.getElementById(`${type}DiscountProducts`);
            const select = document.getElementById(type === 'quantity' ? 'discountScope' : 'promoDiscountScope');
            productsDiv.style.display = select.value === 'specific' ? 'block' : 'none';
        }
        
        function saveDiscountSettings() {
            // حفظ إعدادات خصم الكمية
            CONFIG.DISCOUNTS.enableQuantityDiscount = document.getElementById('enableQuantityDiscount').checked;
            if (CONFIG.DISCOUNTS.enableQuantityDiscount) {
                CONFIG.DISCOUNTS.minQuantityForDiscount = parseInt(document.getElementById('minQuantityForDiscount').value) || 2;
                CONFIG.DISCOUNTS.discountPerItem = parseInt(document.getElementById('discountPerItem').value) || 300;
                CONFIG.DISCOUNTS.discountScope = document.getElementById('discountScope').value;
                
                if (CONFIG.DISCOUNTS.discountScope === 'specific') {
                    const selectedProducts = [];
                    Object.keys(CONFIG.PRODUCTS || {}).forEach(id => {
                        if (document.getElementById(`qdp_${id}`)?.checked) {
                            selectedProducts.push(parseInt(id));
                        }
                    });
                    CONFIG.DISCOUNTS.discountProducts = selectedProducts;
                } else {
                    CONFIG.DISCOUNTS.discountProducts = [];
                }
            }
            
            // حفظ إعدادات الخصم الترويجي
            CONFIG.DISCOUNTS.enablePromotionalDiscount = document.getElementById('enablePromotionalDiscount').checked;
            if (CONFIG.DISCOUNTS.enablePromotionalDiscount) {
                CONFIG.DISCOUNTS.promotionalDiscountPercent = parseInt(document.getElementById('promotionalDiscountPercent').value) || 20;
                CONFIG.DISCOUNTS.promotionalDiscountedPrice = parseInt(document.getElementById('promotionalDiscountedPrice').value) || 0;
                CONFIG.DISCOUNTS.promoDiscountScope = document.getElementById('promoDiscountScope').value;
                
                if (CONFIG.DISCOUNTS.promoDiscountScope === 'specific') {
                    const selectedProducts = [];
                    Object.keys(CONFIG.PRODUCTS || {}).forEach(id => {
                        if (document.getElementById(`pdp_${id}`)?.checked) {
                            selectedProducts.push(parseInt(id));
                        }
                    });
                    CONFIG.DISCOUNTS.promoDiscountProducts = selectedProducts;
                } else {
                    CONFIG.DISCOUNTS.promoDiscountProducts = [];
                }
            }
            
            saveConfig();
            showNotification('تم حفظ إعدادات نظام الخصم', 'success');
        }
        
        function saveColorsSizesSettings() {
            const colorsInput = document.getElementById('availableColors').value.trim();
            CONFIG.AVAILABLE_COLORS = colorsInput ? 
                colorsInput.split(',').map(color => color.trim()).filter(color => color) : 
                [...DEFAULT_CONFIG.AVAILABLE_COLORS];
            
            const sizesInput = document.getElementById('availableSizes').value.trim();
            CONFIG.AVAILABLE_SIZES = sizesInput ? 
                sizesInput.split(',').map(size => size.trim()).filter(size => size) : 
                [...DEFAULT_CONFIG.AVAILABLE_SIZES];
            
            saveConfig();
            showNotification('تم حفظ الألوان والمقاسات', 'success');
        }
        
        // =============================================================================
        // 🔑 إدارة مفاتيح التخزين
        // =============================================================================
        
        function loadStorageKeys() {
            const container = document.getElementById('storageKeysContent');
            const keys = Object.entries(storageKeys);
            
            container.innerHTML = `
                <div class="actions-grid" style="margin-bottom: 30px;">
                    <div class="action-card">
                        <h3><i class="fas fa-key"></i> إضافة مفتاح جديد</h3>
                        <p>إضافة مفتاح تخزين جديد للربط مع GitHub</p>
                        <button class="btn btn-primary" onclick="showAddStorageKeyModal()">
                            <i class="fas fa-plus"></i> إضافة مفتاح
                        </button>
                    </div>
                    
                    <div class="action-card">
                        <h3><i class="fas fa-sync-alt"></i> مزامنة مع GitHub</h3>
                        <p>مزامنة جميع البيانات مع مستودع GitHub</p>
                        <button class="btn btn-success" onclick="syncWithGitHub()">
                            <i class="fas fa-cloud-upload-alt"></i> مزامنة مع GitHub
                        </button>
                    </div>
                </div>
                
                ${keys.length > 0 ? `
                    <div class="content-header">
                        <h2><i class="fas fa-list"></i> المفاتيح المضافة (${keys.length})</h2>
                    </div>
                    
                    <div class="wilaya-grid">
                        ${keys.map(([repo, keyInfo]) => `
                            <div class="wilaya-card">
                                <div class="wilaya-header">
                                    <div class="wilaya-number">${keys.indexOf([repo, keyInfo]) + 1}</div>
                                    <h3 style="font-size: 16px; color: var(--dark); word-break: break-all;">${repo}</h3>
                                </div>
                                
                                <div style="margin: 15px 0;">
                                    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                        <i class="fas fa-user"></i>
                                        <span style="font-size: 14px; color: var(--gray);">اسم المستخدم: ${keyInfo.username}</span>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                        <i class="fas fa-code-branch"></i>
                                        <span style="font-size: 14px; color: var(--gray);">الفرع: ${keyInfo.branch}</span>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 10px;">
                                        <i class="fas fa-key"></i>
                                        <span style="font-size: 14px; color: var(--success);">المفتاح: ${'*'.repeat(20)}</span>
                                    </div>
                                </div>
                                
                                <div class="product-actions">
                                    <button class="btn btn-sm btn-success" onclick="setAsDefault('${repo}')">
                                        <i class="fas fa-star"></i> افتراضي
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteStorageKey('${repo}')">
                                        <i class="fas fa-trash"></i> حذف
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                ` : `
                    <div class="empty-state" style="padding: 60px 20px;">
                        <i class="fas fa-key fa-3x" style="color: var(--gray); margin-bottom: 20px;"></i>
                        <h3>لا توجد مفاتيح تخزين</h3>
                        <p>لم تتم إضافة أي مفاتيح تخزين بعد. ابدأ بإضافة مفتاح للربط مع GitHub.</p>
                    </div>
                `}
            `;
        }
        
        function showAddStorageKeyModal() {
            const modal = document.getElementById('productModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-key"></i> إضافة مفتاح تخزين جديد`;
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="form-group">
                    <label>اسم المستودع (مثال: username/repo):</label>
                    <input type="text" class="form-control" id="storageRepo" placeholder="username/repository">
                </div>
                
                <div class="form-group">
                    <label>اسم المستخدم:</label>
                    <input type="text" class="form-control" id="storageUsername" placeholder="GitHub username">
                </div>
                
                <div class="form-group">
                    <label>اسم الفرع:</label>
                    <input type="text" class="form-control" id="storageBranch" value="main" placeholder="main">
                </div>
                
                <div class="form-group">
                    <label>مفتاح GitHub الشخصي:</label>
                    <input type="password" class="form-control" id="storageKey" placeholder="ghp_xxxxxxxxxxxxxxxxxxxx">
                    <small style="color: var(--gray);">يجب أن يكون المفتاح صالحاً مع صلاحية repo</small>
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-secondary" onclick="closeProductModal()">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button class="btn btn-primary" onclick="saveStorageKey()">
                        <i class="fas fa-save"></i> إضافة المفتاح
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function saveStorageKey() {
            const repo = document.getElementById('storageRepo').value.trim();
            const username = document.getElementById('storageUsername').value.trim();
            const branch = document.getElementById('storageBranch').value.trim() || 'main';
            const key = document.getElementById('storageKey').value.trim();
            
            if (!repo || !username || !key) {
                showNotification('يرجى ملء جميع الحقول', 'error');
                return;
            }
            
            if (!repo.includes('/')) {
                showNotification('صيغة المستودع غير صحيحة. استخدم: username/repo', 'error');
                return;
            }
            
            storageKeys[repo] = {
                username,
                branch,
                key
            };
            
            localStorage.setItem('github_storage_keys', JSON.stringify(storageKeys));
            
            closeProductModal();
            loadStorageKeys();
            updateStats();
            showNotification('تم إضافة مفتاح التخزين بنجاح', 'success');
        }
        
        function deleteStorageKey(repo) {
            showConfirmModal(
                `هل أنت متأكد من حذف مفتاح التخزين للمستودع "${repo}"؟`,
                () => {
                    delete storageKeys[repo];
                    localStorage.setItem('github_storage_keys', JSON.stringify(storageKeys));
                    
                    loadStorageKeys();
                    updateStats();
                    showNotification('تم حذف مفتاح التخزين', 'success');
                }
            );
        }
        
        function setAsDefault(repo) {
            localStorage.setItem('default_github_repo', repo);
            showNotification(`تم تعيين ${repo} كمستودع افتراضي`, 'success');
        }
        
        function getDefaultRepo() {
            return localStorage.getItem('default_github_repo') || Object.keys(storageKeys)[0];
        }
        
