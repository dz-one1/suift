        function showEditProductModal(id, product) {
            const modal = document.getElementById('productModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-edit"></i> تعديل المنتج`;
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="tabs" id="productFormTabs">
                    <button class="tab active" onclick="switchProductTab('basic')">
                        <i class="fas fa-info-circle"></i> المعلومات الأساسية
                    </button>
                    <button class="tab" onclick="switchProductTab('images')">
                        <i class="fas fa-image"></i> الصور
                    </button>
                    <button class="tab" onclick="switchProductTab('variants')">
                        <i class="fas fa-palette"></i> الألوان والمقاسات
                    </button>
                    <button class="tab" onclick="switchProductTab('advanced')">
                        <i class="fas fa-cog"></i> إعدادات متقدمة
                    </button>
                </div>
                
                <!-- تبويب المعلومات الأساسية -->
                <div id="basic-tab" class="tab-content active">
                    <div class="form-group">
                        <label>اسم المنتج:</label>
                        <input type="text" class="form-control" id="productName" 
                               value="${product.name || ''}" placeholder="اسم المنتج">
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label>السعر (دج):</label>
                            <input type="number" class="form-control" id="productPrice" 
                                   value="${product.price || 0}" min="0">
                        </div>
                        <div class="form-group">
                            <label>الكمية المتاحة:</label>
                            <input type="number" class="form-control" id="productStock" 
                                   value="${product.stock || 0}" min="0">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>الفئة:</label>
                        <input type="text" class="form-control" id="productCategory" 
                               value="${product.category || ''}" placeholder="فئة المنتج">
                    </div>
                    
                    <div class="form-group">
                        <label>وصف المنتج:</label>
                        <textarea class="form-control textarea-md" id="productDescription" 
                                  placeholder="وصف مفصل للمنتج">${product.description || ''}</textarea>
                    </div>
                </div>
                
                <!-- تبويب الصور -->
                <div id="images-tab" class="tab-content">
                    <div class="form-group">
                        <label>صورة المنتج الرئيسية:</label>
                        <div class="image-upload-container">
                            ${product.image ? `
                                <div style="text-align: center;">
                                    <img src="${product.image}" alt="صورة المنتج" class="image-preview" 
                                         style="max-width: 200px; max-height: 200px; display: block; margin: 0 auto 15px;">
                                    <button class="btn btn-danger btn-sm" onclick="removeProductImage(${id})">
                                        <i class="fas fa-trash"></i> حذف الصورة
                                    </button>
                                </div>
                            ` : `
                                <p>لم يتم رفع صورة للمنتج بعد</p>
                                <button class="upload-btn" onclick="uploadProductImage(${id})">
                                    <i class="fas fa-upload"></i> رفع صورة
                                </button>
                            `}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>صور الألوان:</label>
                        <button class="btn btn-info" onclick="showColorImagesModal(${id})">
                            <i class="fas fa-palette"></i> إدارة صور الألوان
                        </button>
                        <small style="color: var(--gray); display: block; margin-top: 5px;">
                            يمكنك إضافة صور خاصة لكل لون من ألوان المنتج
                        </small>
                    </div>
                </div>
                
                <!-- تبويب الألوان والمقاسات -->
                <div id="variants-tab" class="tab-content">
                    <div class="form-row">
                        <div class="form-group">
                            <label>الألوان المتاحة:</label>
                            <div class="checkbox-group">
                                ${CONFIG.AVAILABLE_COLORS.map(color => `
                                    <div class="checkbox-item">
                                        <input type="checkbox" id="color_${color}_${id}" 
                                               ${product.availableColors?.includes(color) ? 'checked' : ''}>
                                        <label for="color_${color}_${id}">${color}</label>
                                    </div>
                                `).join('')}
                            </div>
                            <small style="color: var(--gray);">يمكنك إضافة ألوان جديدة من إعدادات المتجر</small>
                        </div>
                        
                        <div class="form-group">
                            <label>المقاسات المتاحة:</label>
                            <div class="checkbox-group">
                                ${CONFIG.AVAILABLE_SIZES.map(size => `
                                    <div class="checkbox-item">
                                        <input type="checkbox" id="size_${size}_${id}" 
                                               ${product.availableSizes?.includes(size) ? 'checked' : ''}>
                                        <label for="size_${size}_${id}">${size}</label>
                                    </div>
                                `).join('')}
                            </div>
                            <small style="color: var(--gray);">يمكنك إضافة مقاسات جديدة من إعدادات المتجر</small>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>دليل المقاسات:</label>
                        <div class="checkbox-item" style="margin-bottom: 10px;">
                            <input type="checkbox" id="enableSizeGuide_${id}" 
                                   ${product.sizeGuide?.enabled ? 'checked' : ''}>
                            <label for="enableSizeGuide_${id}">تفعيل دليل المقاسات لهذا المنتج</label>
                        </div>
                        <button class="btn btn-info btn-sm" onclick="showSizeGuideModal()">
                            <i class="fas fa-ruler-combined"></i> إدارة دليل المقاسات
                        </button>
                    </div>
                </div>
                
                <!-- تبويب الإعدادات المتقدمة -->
                <div id="advanced-tab" class="tab-content">
                    <div class="form-group">
                        <label>الفئات العمرية:</label>
                        <div class="checkbox-group">
                            <div class="checkbox-item">
                                <input type="checkbox" id="age_0-2_${id}" 
                                       ${product.ageRanges?.includes('0-2') ? 'checked' : ''}>
                                <label for="age_0-2_${id}">0-2 سنوات</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="age_3-6_${id}" 
                                       ${product.ageRanges?.includes('3-6') ? 'checked' : ''}>
                                <label for="age_3-6_${id}">3-6 سنوات</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="age_7-12_${id}" 
                                       ${product.ageRanges?.includes('7-12') ? 'checked' : ''}>
                                <label for="age_7-12_${id}">7-12 سنة</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="age_13+_${id}" 
                                       ${product.ageRanges?.includes('13+') ? 'checked' : ''}>
                                <label for="age_13+_${id}">13+ سنة</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="checkbox-item" style="margin-bottom: 15px;">
                        <input type="checkbox" id="productFeatured_${id}" 
                               ${product.featured ? 'checked' : ''}>
                        <label for="productFeatured_${id}">عرض المنتج في القسم المميز</label>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-danger" onclick="deleteProduct(${id}); closeProductModal();">
                        <i class="fas fa-trash"></i> حذف
                    </button>
                    <button class="btn btn-secondary" onclick="closeProductModal()">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button class="btn btn-primary" onclick="saveProduct(${id})">
                        <i class="fas fa-save"></i> حفظ المنتج
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function switchProductTab(tabName) {
            document.querySelectorAll('#productModal .tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('#productModal .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.getElementById(`${tabName}-tab`).classList.add('active');
            event.target.classList.add('active');
        }
        
        function saveProduct(id) {
            const product = CONFIG.PRODUCTS[id];
            
            // حفظ المعلومات الأساسية
            product.name = document.getElementById('productName').value.trim() || 'منتج بدون اسم';
            product.price = parseInt(document.getElementById('productPrice').value) || 0;
            product.stock = parseInt(document.getElementById('productStock').value) || 0;
            product.category = document.getElementById('productCategory').value.trim();
            product.description = document.getElementById('productDescription').value.trim();
            
            // حفظ الألوان
            product.availableColors = [];
            CONFIG.AVAILABLE_COLORS.forEach(color => {
                if (document.getElementById(`color_${color}_${id}`)?.checked) {
                    product.availableColors.push(color);
                }
            });
            
            // حفظ المقاسات
            product.availableSizes = [];
            CONFIG.AVAILABLE_SIZES.forEach(size => {
                if (document.getElementById(`size_${size}_${id}`)?.checked) {
                    product.availableSizes.push(size);
                }
            });
            
            // حفظ الفئات العمرية
            product.ageRanges = [];
            const ageRanges = ['0-2', '3-6', '7-12', '13+'];
            ageRanges.forEach(age => {
                if (document.getElementById(`age_${age}_${id}`)?.checked) {
                    product.ageRanges.push(age);
                }
            });
            
            // حفظ إعدادات دليل المقاسات
            if (!product.sizeGuide) product.sizeGuide = { enabled: false, guide: {} };
            product.sizeGuide.enabled = document.getElementById(`enableSizeGuide_${id}`)?.checked || false;
            
            // حفظ المنتج المميز
            product.featured = document.getElementById(`productFeatured_${id}`)?.checked || false;
            
            // تحديث تاريخ التعديل
            product.updatedAt = new Date().toISOString();
            
            saveConfig();
            loadProducts();
            loadRecentProducts();
            closeProductModal();
            showNotification('تم حفظ المنتج بنجاح', 'success');
        }
        
        function closeProductModal() {
            document.getElementById('productModal').style.display = 'none';
            editingProductId = null;
        }
        
        // =============================================================================
        // 🖼️ إدارة صور الألوان
        // =============================================================================
        
        function showColorImagesModal(productId) {
            const product = CONFIG.PRODUCTS[productId];
            if (!product) return;
            
            const modal = document.getElementById('colorsSizesModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-palette"></i> إدارة صور الألوان`;
            
            // تهيئة بيانات صور الألوان إذا لم تكن موجودة
            if (!product.colorImages) {
                product.colorImages = {};
            }
            
            // إنشاء تبويبات للألوان
            const colors = product.availableColors && product.availableColors.length > 0 ? 
                product.availableColors : CONFIG.AVAILABLE_COLORS;
            
            const tabsHtml = colors.map(color => `
                <button class="tab ${activeColorTab[productId] === color || (!activeColorTab[productId] && colors[0] === color) ? 'active' : ''}" 
                        onclick="switchColorTab(${productId}, '${color}')">
                    <i class="fas fa-circle" style="color: ${getColorCode(color)}"></i> ${color}
                </button>
            `).join('');
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="tabs">
                    ${tabsHtml}
                </div>
                
                <div id="colorImagesContent_${productId}">
                    ${generateColorTabContent(productId, activeColorTab[productId] || colors[0])}
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-secondary" onclick="closeColorsSizesModal()">
                        <i class="fas fa-times"></i> إغلاق
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function switchColorTab(productId, color) {
            activeColorTab[productId] = color;
            
            document.querySelectorAll('#colorsSizesModal .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            event.target.classList.add('active');
            
            document.getElementById(`colorImagesContent_${productId}`).innerHTML = 
                generateColorTabContent(productId, color);
        }
        
        function generateColorTabContent(productId, color) {
            const product = CONFIG.PRODUCTS[productId];
            const colorImages = product.colorImages[color] || { images: [] };
            
            return `
                <div style="margin-top: 20px;">
                    <h4 style="color: var(--dark); margin-bottom: 15px;">
                        <i class="fas fa-images"></i> صور لون ${color}
                    </h4>
                    
                    <div class="color-images-grid" id="colorImagesGrid_${productId}_${color}">
                        ${colorImages.images.map((imageUrl, index) => `
                            <div class="color-image-item">
                                <img src="${imageUrl}" alt="صورة ${color}" class="color-image-preview" 
                                     onerror="this.src=''" loading="lazy">
                                <div class="color-image-actions">
                                    <button class="btn btn-sm btn-danger" 
                                            onclick="removeColorImage(${productId}, '${color}', ${index})">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    
                    ${colorImages.images.length === 0 ? `
                        <div class="empty-state" style="padding: 20px; text-align: center;">
                            <i class="fas fa-image fa-2x" style="color: var(--gray); margin-bottom: 10px;"></i>
                            <p>لا توجد صور لهذا اللون بعد</p>
                        </div>
                    ` : ''}
                    
                    <div style="text-align: center; margin-top: 20px;">
                        <button class="btn btn-primary" onclick="uploadColorImage(${productId}, '${color}')">
                            <i class="fas fa-upload"></i> إضافة صورة للون ${color}
                        </button>
                    </div>
                </div>
            `;
        }
        
        function getColorCode(color) {
            const colorMap = {
                'أبيض': '#FFFFFF',
                'أسود': '#000000',
                'أحمر': '#FF0000',
                'أزرق': '#0000FF',
                'أخضر': '#00FF00',
                'أصفر': '#FFFF00',
                'وردي': '#FFC0CB',
                'بنفسجي': '#800080',
                'برتقالي': '#FFA500',
                'رمادي': '#808080',
                'بني': '#A52A2A'
            };
            
            return colorMap[color] || '#4361ee';
        }
        
        function uploadColorImage(productId, color) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.capture = 'environment';
            
            input.onchange = async function(event) {
                const file = event.target.files[0];
                if (!file) return;
                
                try {
                    const imageUrl = await uploadImageToGitHub(file, `product_${productId}_${color}_${Date.now()}`);
                    
                    const product = CONFIG.PRODUCTS[productId];
                    if (!product.colorImages) product.colorImages = {};
                    if (!product.colorImages[color]) product.colorImages[color] = { images: [] };
                    
                    product.colorImages[color].images.push(imageUrl);
                    
                    saveConfig();
                    showColorImagesModal(productId);
                    showNotification('تم رفع صورة اللون بنجاح', 'success');
                    
                } catch (error) {
                    console.error('خطأ في رفع صورة اللون:', error);
                    showNotification('خطأ في رفع الصورة', 'error');
                }
            };
            
            input.click();
        }
        
        function removeColorImage(productId, color, index) {
            const product = CONFIG.PRODUCTS[productId];
            if (product.colorImages && product.colorImages[color]) {
                product.colorImages[color].images.splice(index, 1);
                saveConfig();
                showColorImagesModal(productId);
                showNotification('تم حذف صورة اللون', 'success');
            }
        }
        
        function closeColorsSizesModal() {
            document.getElementById('colorsSizesModal').style.display = 'none';
        }
        
        // =============================================================================
        // 📏 دليل المقاسات
        // =============================================================================
        
        function showSizeGuideModal() {
            const modal = document.getElementById('sizeGuideModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-ruler-combined"></i> دليل المقاسات`;
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div style="margin-bottom: 20px;">
                    <p style="color: var(--gray);">
                        قم بتعيين القياسات المناسبة لكل مقاس لتسهيل عملية اختيار العملاء للمقاس المناسب.
                    </p>
                </div>
                
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse; background: white; border-radius: var(--radius); overflow: hidden; box-shadow: var(--shadow);">
                        <thead>
                            <tr style="background: var(--primary); color: white;">
                                <th style="padding: 12px; text-align: right;">المقاس</th>
                                <th style="padding: 12px; text-align: right;">الطول من (سم)</th>
                                <th style="padding: 12px; text-align: right;">الطول إلى (سم)</th>
                                <th style="padding: 12px; text-align: right;">الوزن من (كغ)</th>
                                <th style="padding: 12px; text-align: right;">الوزن إلى (كغ)</th>
                                <th style="padding: 12px; text-align: right;">مفعل</th>
                                <th style="padding: 12px; text-align: right;">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody id="sizeGuideTableBody">
                            ${Object.entries(CONFIG.SIZE_GUIDE || {}).map(([size, data]) => `
                                <tr style="border-bottom: 1px solid var(--border);">
                                    <td style="padding: 12px; text-align: right; font-weight: 600;">${size}</td>
                                    <td style="padding: 12px; text-align: right;">
                                        <input type="number" class="form-control" style="width: 80px; padding: 5px;" 
                                               value="${data.heightFrom || 0}" min="0" id="heightFrom_${size}">
                                    </td>
                                    <td style="padding: 12px; text-align: right;">
                                        <input type="number" class="form-control" style="width: 80px; padding: 5px;" 
                                               value="${data.heightTo || 0}" min="0" id="heightTo_${size}">
                                    </td>
                                    <td style="padding: 12px; text-align: right;">
                                        <input type="number" class="form-control" style="width: 80px; padding: 5px;" 
                                               value="${data.weightFrom || 0}" min="0" id="weightFrom_${size}">
                                    </td>
                                    <td style="padding: 12px; text-align: right;">
                                        <input type="number" class="form-control" style="width: 80px; padding: 5px;" 
                                               value="${data.weightTo || 0}" min="0" id="weightTo_${size}">
                                    </td>
                                    <td style="padding: 12px; text-align: right;">
                                        <input type="checkbox" id="enabled_${size}" 
                                               ${data.enabled ? 'checked' : ''}>
                                    </td>
                                    <td style="padding: 12px; text-align: right;">
                                        <button class="btn btn-sm btn-primary" onclick="saveSizeGuideRow('${size}')">
                                            <i class="fas fa-save"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteSizeGuideRow('${size}')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
                
                <div style="margin-top: 20px;">
                    <h4 style="color: var(--dark); margin-bottom: 10px;">
                        <i class="fas fa-plus"></i> إضافة مقاس جديد
                    </h4>
                    
                    <div style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
                        <input type="text" class="form-control" style="width: 100px;" 
                               id="newSizeCode" placeholder="رمز المقاس">
                        <button class="btn btn-primary" onclick="addSizeGuideRow()">
                            <i class="fas fa-plus"></i> إضافة
                        </button>
                    </div>
                </div>
                
                <div class="form-actions" style="margin-top: 30px;">
                    <button class="btn btn-primary" onclick="saveAllSizeGuides()">
                        <i class="fas fa-save"></i> حفظ جميع التغييرات
                    </button>
                    <button class="btn btn-secondary" onclick="closeSizeGuideModal()">
                        <i class="fas fa-times"></i> إغلاق
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function addSizeGuideRow() {
            const sizeCode = document.getElementById('newSizeCode').value.trim().toUpperCase();
            if (!sizeCode) {
                showNotification('يرجى إدخال رمز المقاس', 'error');
                return;
            }
            
            if (CONFIG.SIZE_GUIDE[sizeCode]) {
                showNotification('هذا المقاس موجود بالفعل', 'error');
                return;
            }
            
            CONFIG.SIZE_GUIDE[sizeCode] = {
                heightFrom: 0,
                heightTo: 0,
                weightFrom: 0,
                weightTo: 0,
                enabled: true
            };
            
            saveConfig();
            showSizeGuideModal();
            document.getElementById('newSizeCode').value = '';
            showNotification('تم إضافة المقاس الجديد', 'success');
        }
        
        function saveSizeGuideRow(size) {
            CONFIG.SIZE_GUIDE[size] = {
                heightFrom: parseInt(document.getElementById(`heightFrom_${size}`).value) || 0,
                heightTo: parseInt(document.getElementById(`heightTo_${size}`).value) || 0,
                weightFrom: parseInt(document.getElementById(`weightFrom_${size}`).value) || 0,
                weightTo: parseInt(document.getElementById(`weightTo_${size}`).value) || 0,
                enabled: document.getElementById(`enabled_${size}`).checked
            };
            
            saveConfig();
            showNotification(`تم تحديث مقاس ${size}`, 'success');
        }
        
        function deleteSizeGuideRow(size) {
            if (Object.keys(CONFIG.SIZE_GUIDE).length <= 1) {
                showNotification('لا يمكن حذف جميع المقاسات', 'error');
                return;
            }
            
            showConfirmModal(
                `هل أنت متأكد من حذف مقاس ${size}؟`,
                () => {
                    delete CONFIG.SIZE_GUIDE[size];
                    saveConfig();
                    showSizeGuideModal();
                    showNotification('تم حذف المقاس', 'success');
                }
            );
        }
        
        function saveAllSizeGuides() {
            Object.keys(CONFIG.SIZE_GUIDE || {}).forEach(size => {
                CONFIG.SIZE_GUIDE[size] = {
                    heightFrom: parseInt(document.getElementById(`heightFrom_${size}`).value) || 0,
                    heightTo: parseInt(document.getElementById(`heightTo_${size}`).value) || 0,
                    weightFrom: parseInt(document.getElementById(`weightFrom_${size}`).value) || 0,
                    weightTo: parseInt(document.getElementById(`weightTo_${size}`).value) || 0,
                    enabled: document.getElementById(`enabled_${size}`).checked
                };
            });
            
            saveConfig();
            showNotification('تم حفظ جميع التغييرات', 'success');
        }
        
        function closeSizeGuideModal() {
            document.getElementById('sizeGuideModal').style.display = 'none';
        }
        
        // =============================================================================
        // ☁️ رفع الصور إلى GitHub
        // =============================================================================
        
        async function uploadProductImage(productId) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.capture = 'environment';
            
            input.onchange = async function(event) {
                const file = event.target.files[0];
                if (!file) return;
                
                try {
                    const imageUrl = await uploadImageToGitHub(file, `product_${productId}_${Date.now()}`);
                    
                    CONFIG.PRODUCTS[productId].image = imageUrl;
                    saveConfig();
                    
                    showEditProductModal(productId, CONFIG.PRODUCTS[productId]);
                    showNotification('تم رفع صورة المنتج بنجاح', 'success');
                    
                } catch (error) {
                    console.error('خطأ في رفع صورة المنتج:', error);
                    showNotification('خطأ في رفع الصورة', 'error');
                }
            };
            
            input.click();
        }
        
        async function uploadImageToGitHub(file, filename) {
            return new Promise(async (resolve, reject) => {
                try {
                    const repo = getDefaultRepo();
                    if (!repo) {
                        throw new Error('لم يتم تعيين مستودع تخزين');
                    }
                    
                    const storageKeyConfig = storageKeys[repo];
                    if (!storageKeyConfig) {
                        throw new Error('مفتاح التخزين غير موجود');
                    }
                    
                    // قراءة الملف كـ base64
                    const reader = new FileReader();
                    reader.onload = async function(e) {
                        try {
                            const base64Content = e.target.result.split(',')[1];
                            
                            const response = await fetch(
                                `https://api.github.com/repos/${storageKeyConfig.username}/${repo.split('/')[1]}/contents/uploads/${filename}.jpg`,
                                {
                                    method: 'PUT',
                                    headers: {
                                        'Authorization': `token ${storageKeyConfig.key}`,
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/vnd.github.v3+json'
                                    },
                                    body: JSON.stringify({
                                        message: `Upload image ${filename}`,
                                        content: base64Content,
                                        branch: storageKeyConfig.branch
                                    })
                                }
                            );
                            
                            if (response.ok) {
                                const data = await response.json();
                                const imageUrl = data.content.download_url;
                                resolve(imageUrl);
                            } else {
                                const errorData = await response.text();
                                console.error('GitHub API error:', errorData);
                                reject(new Error('فشل في رفع الصورة إلى GitHub'));
                            }
                        } catch (innerError) {
                            reject(innerError);
                        }
                    };
                    
                    reader.readAsDataURL(file);
                    
                } catch (error) {
                    reject(error);
                }
            });
        }
        
        async function deleteImageFromGitHub(imageUrl) {
            try {
                const repo = getDefaultRepo();
                if (!repo) return;
                
                const storageKeyConfig = storageKeys[repo];
                if (!storageKeyConfig) return;
                
                // استخراج مسار الملف من رابط GitHub
                const urlParts = imageUrl.split('/');
                const pathIndex = urlParts.indexOf('uploads');
                if (pathIndex === -1) return;
                
                const filePath = urlParts.slice(pathIndex).join('/');
                
                // الحصول على معلومات الملف أولاً للحصول على SHA
                const fileInfoResponse = await fetch(
                    `https://api.github.com/repos/${storageKeyConfig.username}/${repo.split('/')[1]}/contents/${filePath}`,
                    {
                        headers: {
                            'Authorization': `token ${storageKeyConfig.key}`,
                            'Accept': 'application/vnd.github.v3+json'
                        }
                    }
                );
                
                if (fileInfoResponse.ok) {
                    const fileInfo = await fileInfoResponse.json();
                    
                    // حذف الملف
                    await fetch(
                        `https://api.github.com/repos/${storageKeyConfig.username}/${repo.split('/')[1]}/contents/${filePath}`,
                        {
                            method: 'DELETE',
                            headers: {
                                'Authorization': `token ${storageKeyConfig.key}`,
                                'Content-Type': 'application/json',
                                'Accept': 'application/vnd.github.v3+json'
                            },
                            body: JSON.stringify({
                                message: `Delete image ${filePath.split('/').pop()}`,
                                sha: fileInfo.sha,
                                branch: storageKeyConfig.branch
                            })
                        }
                    );
                }
            } catch (error) {
                console.error('خطأ في حذف الصورة من GitHub:', error);
            }
        }
        
        function removeProductImage(productId) {
            showConfirmModal(
                'هل أنت متأكد من حذف صورة المنتج؟',
                async () => {
                    const productImage = CONFIG.PRODUCTS[productId].image;
                    if (productImage && productImage.includes('github.com')) {
                        await deleteImageFromGitHub(productImage);
                    }
                    
                    CONFIG.PRODUCTS[productId].image = '';
                    saveConfig();
                    showEditProductModal(productId, CONFIG.PRODUCTS[productId]);
                    showNotification('تم حذف صورة المنتج', 'success');
                }
            );
        }
        
        // =============================================================================
        // 🔄 المزامنة مع GitHub
        // =============================================================================
        
        async function syncWithGitHub() {
            const repo = getDefaultRepo();
            if (!repo) {
                showNotification('يرجى إضافة مفتاح تخزين أولاً', 'error');
                return;
            }
            
            const storageKeyConfig = storageKeys[repo];
            if (!storageKeyConfig) {
                showNotification('مفتاح التخزين غير صالح', 'error');
                return;
            }
            
            try {
                showNotification('جارٍ المزامنة مع GitHub...', 'info');
                
                // إنشاء ملف config.js
                const configContent = `
// إعدادات المتجر
const STORE_CONFIG = ${JSON.stringify(CONFIG, null, 2)};

// تصدير الإعدادات
if (typeof module !== 'undefined' && module.exports) {
    module.exports = { STORE_CONFIG };
}
                `;
                
                // رفع ملف config.js إلى GitHub
                const response = await fetch(
                    `https://api.github.com/repos/${storageKeyConfig.username}/${repo.split('/')[1]}/contents/config.js`,
                    {
                        method: 'PUT',
                        headers: {
                            'Authorization': `token ${storageKeyConfig.key}`,
                            'Content-Type': 'application/json',
                            'Accept': 'application/vnd.github.v3+json'
                        },
                        body: JSON.stringify({
                            message: 'Update store configuration',
                            content: btoa(unescape(encodeURIComponent(configContent))),
                            branch: storageKeyConfig.branch,
                            sha: await getFileSHA(repo, 'config.js')
                        })
                    }
                );
                
                if (response.ok) {
                    localStorage.setItem('lastGitHubSync', new Date().toISOString());
                    updateStats();
                    showNotification('تم المزامنة مع GitHub بنجاح', 'success');
                } else {
                    const errorData = await response.text();
                    console.error('GitHub API error:', errorData);
                    showNotification('فشل في المزامنة مع GitHub', 'error');
                }
                
            } catch (error) {
                console.error('خطأ في المزامنة:', error);
                showNotification('خطأ في الاتصال مع GitHub', 'error');
            }
        }
        
        async function getFileSHA(repo, filePath) {
            try {
                const storageKeyConfig = storageKeys[repo];
                if (!storageKeyConfig) return null;
                
                const response = await fetch(
                    `https://api.github.com/repos/${storageKeyConfig.username}/${repo.split('/')[1]}/contents/${filePath}`,
                    {
                        headers: {
                            'Authorization': `token ${storageKeyConfig.key}`,
                            'Accept': 'application/vnd.github.v3+json'
                        }
                    }
                );
                
                if (response.ok) {
                    const data = await response.json();
                    return data.sha;
                }
                return null;
            } catch (error) {
                return null;
            }
        }
        
        async function quickSaveAllSettings() {
            saveConfig();
            
            const repo = getDefaultRepo();
            if (repo && storageKeys[repo]) {
                await syncWithGitHub();
            } else {
                showNotification('تم حفظ الإعدادات محلياً', 'success');
            }
        }
        
        // =============================================================================
        // 📊 تصدير الطلبات
        // =============================================================================
        
        function exportOrdersToCSV() {
            const orders = JSON.parse(localStorage.getItem('storeOrders') || '[]');
            
            if (orders.length === 0) {
                showNotification('لا توجد طلبات لتصديرها', 'warning');
                return;
            }
            
            let csvContent = "التاريخ,الاسم,الهاتف,الولاية,العنوان,المنتجات,المجموع,ملاحظات\\n";
            
            orders.forEach(order => {
                const productsText = (order.products || [])
                    .map(p => `${p.name || 'منتج'} (${p.quantity})`)
                    .join('; ');
                    
                const row = [
                    `"${new Date(order.timestamp || Date.now()).toLocaleString('fr-FR')}"`,
                    `"${(order.customerName || '').replace(/"/g, '""')}"`,
                    `"${(order.customerPhone || '').replace(/"/g, '""')}"`,
                    `"${(order.selectedWilaya || '').replace(/"/g, '""')}"`,
                    `"${(order.address || '').replace(/"/g, '""')}"`,
                    `"${productsText.replace(/"/g, '""')}"`,
                    order.total || 0,
                    `"${(order.notes || '').replace(/"/g, '""')}"`
                ].join(',');
                
                csvContent += row + "\\n";
            });
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `orders-export-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            URL.revokeObjectURL(url);
            
            showNotification('تم تصدير الطلبات إلى CSV', 'success');
        }
        
        function clearOrdersData() {
            showConfirmModal(
                'هل أنت متأكد من حذف جميع الطلبات؟ لا يمكن التراجع عن هذا الإجراء.',
                () => {
                    localStorage.removeItem('storeOrders');
                    loadAdvancedSettings();
                    showNotification('تم حذف جميع الطلبات', 'success');
                }
            );
        }
        
        // =============================================================================
        // 🧹 أدوات النظام
        // =============================================================================
        
        function clearCache() {
            showConfirmModal(
                'هل أنت متأكد من مسح الكاش؟ سيتم حذف جميع البيانات المؤقتة.',
                () => {
                    // حذف البيانات المؤقتة مع الحفاظ على الإعدادات الأساسية
                    localStorage.removeItem('sessionToken');
                    localStorage.removeItem('tempData');
                    localStorage.removeItem('cache');
                    
                    // إعادة تحميل الصفحة
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                    
                    showNotification('تم مسح الكاش بنجاح', 'success');
                }
            );
        }
        
        function resetToDefault() {
            showConfirmModal(
                'هل أنت متأكد من إعادة التعيين إلى الإعدادات الافتراضية؟ سيتم حذف جميع البيانات.',
                () => {
                    // حفظ كلمة المرور الحالية
                    const currentPassword = localStorage.getItem('adminPassword');
                    
                    // حذف جميع البيانات
                    localStorage.clear();
                    
                    // استعادة كلمة المرور
                    if (currentPassword) {
                        localStorage.setItem('adminPassword', currentPassword);
                    }
                    
                    // إعادة تحميل الصفحة
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                    
                    showNotification('تم إعادة التعيين بنجاح', 'success');
                }
            );
        }
        
        function exportConfig() {
            const exportData = {
                config: CONFIG,
                storageKeys: storageKeys,
                timestamp: new Date().toISOString(),
                version: '1.0'
            };
            
            const blob = new Blob([JSON.stringify(exportData, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `store-config-export-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            URL.revokeObjectURL(url);
            
            showNotification('تم تصدير الإعدادات', 'success');
        }
        
        function importConfig() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = function(event) {
                const file = event.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const importData = JSON.parse(e.target.result);
                        
                        showConfirmModal(
                            'هل أنت متأكد من استيراد الإعدادات؟ سيتم استبدال الإعدادات الحالية.',
                            () => {
                                if (importData.config) {
                                    CONFIG = importData.config;
                                    localStorage.setItem('storeConfig', JSON.stringify(CONFIG));
                                }
                                
                                if (importData.storageKeys) {
                                    storageKeys = importData.storageKeys;
                                    localStorage.setItem('github_storage_keys', JSON.stringify(storageKeys));
                                }
                                
                                window.location.reload();
                            }
                        );
                    } catch (error) {
                        showNotification('ملف الاستيراد غير صالح', 'error');
                    }
                };
                
                reader.readAsText(file);
            };
            
            input.click();
        }
        
        // =============================================================================
        // 📱 وظائف المتجر
        // =============================================================================
        
        function goToStore() {
            const storeUrl = window.location.origin;
            window.open(storeUrl, '_blank');
        }
        
        // =============================================================================
        // 💾 وظائف عامة
        // =============================================================================
        
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notificationText');
            
            notification.className = `notification ${type}`;
            notificationText.textContent = message;
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        function showConfirmModal(message, confirmCallback) {
            const modal = document.getElementById('confirmModal');
            const messageElement = document.getElementById('confirmMessage');
            const confirmButton = document.getElementById('confirmDeleteButton');
            
            messageElement.textContent = message;
            
            // إزالة المستمعين السابقين
            const newConfirmButton = confirmButton.cloneNode(true);
            confirmButton.parentNode.replaceChild(newConfirmButton, confirmButton);
            
            // إضافة مستمع جديد
            newConfirmButton.addEventListener('click', function() {
                hideConfirmModal();
                confirmCallback();
            });
            
            modal.style.display = 'flex';
        }
        
        function hideConfirmModal() {
            document.getElementById('confirmModal').style.display = 'none';
        }
        
        // =============================================================================
        // 🚀 تهيئة التطبيق عند التحميل
        // =============================================================================
        
        document.addEventListener('DOMContentLoaded', function() {
            // إخفاء شاشة التحميل بعد تحميل الصفحة
            setTimeout(() => {
                document.getElementById('splashScreen').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('splashScreen').style.display = 'none';
                }, 500);
            }, 1500);
            
            // التحقق من المصادقة
            checkAuthentication();
            
            // استمع لأحداث PWA
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                checkInstallability();
            });
            
            window.addEventListener('appinstalled', () => {
                isPWAInstalled = true;
                document.getElementById('pwaInstallCard').style.display = 'none';
                document.getElementById('pwaInstallPrompt').style.display = 'none';
                deferredPrompt = null;
            });
            
            // التحقق من وضع التطبيق
            checkDisplayMode();
            
            // استمع لأحداث الاتصال
            window.addEventListener('online', checkConnection);
            window.addEventListener('offline', checkConnection);
            
            // إضافة مستمع للأحداث لتأثيرات اللمس
            addTouchEffects();
            
            // تحديث تلقائي كل 5 دقائق
            setInterval(() => {
                updateStats();
            }, 300000);
            
            // تحميل الإعدادات من config.js تلقائياً
            setTimeout(() => {
                loadConfigFromConfigJS();
            }, 2000);
        });
        
        // =============================================================================
        // 📄 Service Worker
        // =============================================================================
        
        // إضافة Service Worker
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('sw.js')
                .then(registration => {
                    console.log('Service Worker registered:', registration);
                    
                    // التحقق من التحديثات
                    registration.addEventListener('updatefound', () => {
                        const newWorker = registration.installing;
                        newWorker.addEventListener('statechange', () => {
                            if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                                showNotification('تحديث جديد متاح!', 'info');
                                setTimeout(() => {
                                    window.location.reload();
                                }, 3000);
                            }
                        });
                    });
                })
                .catch(error => {
                    console.log('Service Worker registration failed:', error);
                });
        }
        
        // =============================================================================
        // 📝 دالة لإضافة سجل النشاط
        // =============================================================================
        
        function logActivity(action, details = '') {
            try {
                const activityLog = JSON.parse(localStorage.getItem('activityLog') || '[]');
                activityLog.unshift({
                    action,
                    details,
                    timestamp: new Date().toISOString()
                });
                
                // حفظ آخر 50 نشاط فقط
                if (activityLog.length > 50) {
                    activityLog.splice(50);
                }
                
                localStorage.setItem('activityLog', JSON.stringify(activityLog));
            } catch (error) {
                console.error('خطأ في تسجيل النشاط:', error);
            }
        }
    </script>
</body>
</html>
