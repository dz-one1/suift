                            <p>عرض سجل تسجيلات الدخول والنشاطات</p>
                            <button class="btn btn-info" onclick="showActivityLog()">
                                <i class="fas fa-list"></i> عرض السجل
                            </button>
                        </div>
                    </div>
                </div>
                
                <div style="margin-top: 40px;">
                    <h3 style="color: var(--primary); margin-bottom: 20px;">
                        <i class="fas fa-shield-alt"></i> إعدادات الأمان المتقدمة
                    </h3>
                    
                    <div class="checkbox-item" style="margin-bottom: 15px;">
                        <input type="checkbox" id="enableAutoLogout" 
                               ${localStorage.getItem('enableAutoLogout') === 'true' ? 'checked' : ''}>
                        <label for="enableAutoLogout">تفعيل تسجيل الخروج التلقائي بعد 30 دقيقة</label>
                    </div>
                    
                    <div class="checkbox-item" style="margin-bottom: 15px;">
                        <input type="checkbox" id="enableLoginNotifications" 
                               ${localStorage.getItem('enableLoginNotifications') === 'true' ? 'checked' : ''}>
                        <label for="enableLoginNotifications">تفعيل إشعارات تسجيل الدخول</label>
                    </div>
                    
                    <button class="btn btn-primary" onclick="saveSecuritySettings()">
                        <i class="fas fa-save"></i> حفظ إعدادات الأمان
                    </button>
                </div>
            `;
        }
        
        function changePassword() {
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmNewPassword').value;
            
            const savedPassword = localStorage.getItem('adminPassword') || DEFAULT_PASSWORD;
            
            if (currentPassword !== savedPassword) {
                showNotification('كلمة المرور الحالية غير صحيحة', 'error');
                return;
            }
            
            if (newPassword.length < 4) {
                showNotification('كلمة المرور الجديدة يجب أن تكون على الأقل 4 أحرف', 'error');
                return;
            }
            
            if (newPassword !== confirmPassword) {
                showNotification('كلمات المرور غير متطابقة', 'error');
                return;
            }
            
            localStorage.setItem('adminPassword', newPassword);
            
            document.getElementById('currentPassword').value = '';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmNewPassword').value = '';
            
            showNotification('تم تغيير كلمة المرور بنجاح', 'success');
        }
        
        function logoutAllDevices() {
            showConfirmModal(
                'هل أنت متأكد من تسجيل الخروج من جميع الأجهزة؟',
                () => {
                    localStorage.removeItem('adminAuthenticated');
                    localStorage.removeItem('sessionToken');
                    showNotification('تم تسجيل الخروج من جميع الأجهزة', 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                }
            );
        }
        
        function showActivityLog() {
            const modal = document.getElementById('productModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-history"></i> سجل النشاط`;
            
            const activityLog = JSON.parse(localStorage.getItem('activityLog') || '[]');
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div style="max-height: 400px; overflow-y: auto;">
                    ${activityLog.length > 0 ? `
                        <div style="display: flex; flex-direction: column; gap: 10px;">
                            ${activityLog.map(activity => `
                                <div style="padding: 12px; background: var(--light); border-radius: var(--radius-sm);">
                                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                                        <span style="font-weight: 600; color: var(--dark);">${activity.action}</span>
                                        <span style="font-size: 12px; color: var(--gray);">${new Date(activity.timestamp).toLocaleString('fr-FR')}</span>
                                    </div>
                                    <div style="font-size: 13px; color: var(--gray);">
                                        ${activity.details || ''}
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    ` : `
                        <div class="empty-state" style="padding: 40px 0;">
                            <i class="fas fa-history fa-2x" style="color: var(--gray); margin-bottom: 20px;"></i>
                            <h3>لا يوجد سجل نشاط</h3>
                            <p>لم يتم تسجيل أي نشاط بعد.</p>
                        </div>
                    `}
                </div>
                
                <div class="form-actions" style="margin-top: 20px;">
                    ${activityLog.length > 0 ? `
                        <button class="btn btn-danger" onclick="clearActivityLog()">
                            <i class="fas fa-trash"></i> مسح السجل
                        </button>
                    ` : ''}
                    <button class="btn btn-secondary" onclick="closeProductModal()">
                        <i class="fas fa-times"></i> إغلاق
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function clearActivityLog() {
            localStorage.removeItem('activityLog');
            showActivityLog();
            showNotification('تم مسح سجل النشاط', 'success');
        }
        
        function saveSecuritySettings() {
            localStorage.setItem('enableAutoLogout', document.getElementById('enableAutoLogout').checked);
            localStorage.setItem('enableLoginNotifications', document.getElementById('enableLoginNotifications').checked);
            showNotification('تم حفظ إعدادات الأمان', 'success');
        }
        
