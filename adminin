        function createBackup() {
            const backupData = {
                config: CONFIG,
                storageKeys: storageKeys,
                orders: JSON.parse(localStorage.getItem('storeOrders') || '[]'),
                timestamp: new Date().toISOString(),
                version: '1.0'
            };
            
            const backupBlob = new Blob([JSON.stringify(backupData, null, 2)], { type: 'application/json' });
            const backupUrl = URL.createObjectURL(backupBlob);
            
            const a = document.createElement('a');
            a.href = backupUrl;
            a.download = `store-backup-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            URL.revokeObjectURL(backupUrl);
            
            showNotification('تم إنشاء نسخة احتياطية', 'success');
        }
        
        function restoreBackup() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = function(event) {
                const file = event.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const backupData = JSON.parse(e.target.result);
                        
                        showConfirmModal(
                            'هل أنت متأكد من استعادة النسخة الاحتياطية؟ سيتم استبدال جميع البيانات الحالية.',
                            () => {
                                if (backupData.config) {
                                    CONFIG = backupData.config;
                                    localStorage.setItem('storeConfig', JSON.stringify(CONFIG));
                                }
                                
                                if (backupData.storageKeys) {
                                    storageKeys = backupData.storageKeys;
                                    localStorage.setItem('github_storage_keys', JSON.stringify(storageKeys));
                                }
                                
                                if (backupData.orders) {
                                    localStorage.setItem('storeOrders', JSON.stringify(backupData.orders));
                                }
                                
                                window.location.reload();
                            }
                        );
                    } catch (error) {
                        showNotification('ملف النسخة الاحتياطية غير صالح', 'error');
                    }
                };
                
                reader.readAsText(file);
            };
            
            input.click();
        }
        
        function exportToJSON() {
            const exportData = {
                products: CONFIG.PRODUCTS,
                delivery: CONFIG.DELIVERY_PRICES,
                freeDelivery: CONFIG.FREE_DELIVERY,
                storeInfo: CONFIG.STORE_INFO,
                timestamp: new Date().toISOString()
            };
            
            const blob = new Blob([JSON.stringify(exportData, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `store-data-export-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            URL.revokeObjectURL(url);
            
            showNotification('تم تصدير البيانات إلى JSON', 'success');
        }
        
        function exportToCSV() {
            // تصدير المنتجات إلى CSV
            let csvContent = "ID,Name,Price,Category,Stock,Description\\n";
            
            Object.entries(CONFIG.PRODUCTS).forEach(([id, product]) => {
                const row = [
                    id,
                    `"${(product.name || '').replace(/"/g, '""')}"`,
                    product.price || 0,
                    `"${(product.category || '').replace(/"/g, '""')}"`,
                    product.stock || 0,
                    `"${(product.description || '').replace(/"/g, '""')}"`
                ].join(',');
                
                csvContent += row + "\\n";
            });
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `products-export-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            URL.revokeObjectURL(url);
            
            showNotification('تم تصدير المنتجات إلى CSV', 'success');
        }
        
        function optimizeDatabase() {
            // تحسين قاعدة البيانات المحلية
            try {
                // تنظيف localStorage من البيانات القديمة
                const oneMonthAgo = Date.now() - (30 * 24 * 60 * 60 * 1000);
                const activityLog = JSON.parse(localStorage.getItem('activityLog') || '[]');
                const filteredLog = activityLog.filter(activity => 
                    new Date(activity.timestamp).getTime() > oneMonthAgo
                );
                localStorage.setItem('activityLog', JSON.stringify(filteredLog));
                
                // ضغط البيانات الكبيرة
                if (localStorage.getItem('storeOrders')) {
                    const orders = JSON.parse(localStorage.getItem('storeOrders'));
                    if (orders.length > 100) {
                        localStorage.setItem('storeOrders', JSON.stringify(orders.slice(-100)));
                    }
                }
                
                showNotification('تم تحسين قاعدة البيانات بنجاح', 'success');
            } catch (error) {
                showNotification('خطأ في تحسين قاعدة البيانات', 'error');
            }
        }
        
        function repairDatabase() {
            showConfirmModal(
                'هل أنت متأكد من إصلاح قاعدة البيانات؟ قد يتم فقد بعض البيانات التالفة.',
                () => {
                    try {
                        // إعادة تهيئة البيانات التالفة
                        const keys = Object.keys(localStorage);
                        let repairedCount = 0;
                        
                        keys.forEach(key => {
                            try {
                                if (key === 'storeConfig') {
                                    const config = JSON.parse(localStorage.getItem(key));
                                    // التأكد من أن الهيكل الأساسي موجود
                                    if (!config.PRODUCTS) config.PRODUCTS = {};
                                    if (!config.DELIVERY_PRICES) config.DELIVERY_PRICES = {};
                                    if (!config.STORE_INFO) config.STORE_INFO = {};
                                    localStorage.setItem(key, JSON.stringify(config));
                                    repairedCount++;
                                }
                            } catch (e) {
                                // حذف البيانات التالفة
                                localStorage.removeItem(key);
                            }
                        });
                        
                        showNotification(`تم إصلاح ${repairedCount} عنصر في قاعدة البيانات`, 'success');
                    } catch (error) {
                        showNotification('خطأ في إصلاح قاعدة البيانات', 'error');
                    }
                }
            );
        }
        
        function showAdvancedStats() {
            const modal = document.getElementById('productModal');
            const modalHeader = modal.querySelector('.modal-header h3');
            modalHeader.innerHTML = `<i class="fas fa-chart-bar"></i> الإحصائيات المتقدمة`;
            
            const orders = JSON.parse(localStorage.getItem('storeOrders') || '[]');
            const totalOrdersValue = orders.reduce((sum, order) => sum + (order.total || 0), 0);
            const averageOrderValue = orders.length > 0 ? totalOrdersValue / orders.length : 0;
            
            const productsByCategory = {};
            Object.values(CONFIG.PRODUCTS).forEach(product => {
                const category = product.category || 'غير مصنف';
                productsByCategory[category] = (productsByCategory[category] || 0) + 1;
            });
            
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="stat-card">
                        <div class="stat-header">
                            <div>
                                <div class="stat-value">${orders.length}</div>
                                <div class="stat-label">إجمالي الطلبات</div>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div>
                                <div class="stat-value">${Math.round(averageOrderValue).toLocaleString()} دج</div>
                                <div class="stat-label">متوسط قيمة الطلب</div>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div>
                                <div class="stat-value">${totalOrdersValue.toLocaleString()} دج</div>
                                <div class="stat-label">إجمالي قيمة المبيعات</div>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div>
                                <div class="stat-value">${Object.keys(productsByCategory).length}</div>
                                <div class="stat-label">عدد الفئات</div>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-tags"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div style="margin-top: 30px;">
                    <h4 style="color: var(--dark); margin-bottom: 15px;">
                        <i class="fas fa-tag"></i> توزيع المنتجات حسب الفئة
                    </h4>
                    <div style="background: var(--light); padding: 15px; border-radius: var(--radius);">
                        ${Object.entries(productsByCategory).map(([category, count]) => `
                            <div style="margin-bottom: 10px;">
                                <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                                    <span>${category}</span>
                                    <span style="font-weight: 600;">${count} منتج</span>
                                </div>
                                <div style="height: 8px; background: white; border-radius: 4px; overflow: hidden;">
                                    <div style="height: 100%; width: ${(count / Object.keys(CONFIG.PRODUCTS).length) * 100}%; background: var(--primary);"></div>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
                
                <div class="form-actions" style="margin-top: 20px;">
                    <button class="btn btn-secondary" onclick="closeProductModal()">
                        <i class="fas fa-times"></i> إغلاق
                    </button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }
        
        function generateReport() {
            showNotification('سيتم إضافة هذه الميزة قريباً', 'info');
        }
        
        function runJSCommand() {
            const command = document.getElementById('jsCommand').value;
            try {
                const result = eval(command);
                console.log('نتيجة الأمر:', result);
                showNotification('تم تنفيذ الأمر بنجاح', 'success');
            } catch (error) {
                console.error('خطأ في تنفيذ الأمر:', error);
                showNotification('خطأ في تنفيذ الأمر', 'error');
            }
        }
        
        function clearConsole() {
            console.clear();
            showNotification('تم مسح الكونسول', 'success');
        }
        
